{% extends 'BackendBundle::base.html.twig' %}

{% block body %}
<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <div class="block">
                {{ form_start(form) }}
                {{ form_errors(form) }}
                <div class="row">
                    <div class="col-lg-4">
                        {{ form_row(form.controllerAlias) }}
                        {{ form_row(form.code) }}
                        {{ form_row(form.zoneId) }}
                        {{ form_row(form.parent) }}
                        {{ form_row(form.icon) }}
                    </div>
                    <div class="col-lg-4">
                        {{ form_row(form.unique) }}
                        {{ form_row(form.isSitemap) }}
                        {{ form_row(form.search) }}
                        {{ form_row(form.active) }}
                        {{ form_row(form.save) }}
                    </div>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block style %}
    {{ parent() }}
{% endblock %}

{% block script %}
    {{ parent() }}
{% endblock %}
