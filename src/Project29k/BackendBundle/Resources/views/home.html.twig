{% extends 'BackendBundle::base.html.twig' %}

{% block body %}
<div class="container-fluid">
    <div class="alert alert-success" role="alert">...</div>
    <div class="alert alert-info" role="alert">...</div>
    <div class="alert alert-warning" role="alert">...</div>
    <div class="alert alert-danger" role="alert">...</div>

    <ul class="nav nav-tabs" role="tablist">
        <li><a href="#members"><i class="fa fa-group"></i>Membres</a></li>
        <li class="active"><a href="#_connections"><i class="fa fa-sign-in"></i>Connexions</a></li>
        <li><a href="#roles"><i class="fa fa-magic"></i>Roles</a></li>
        <li><a href="#_configuration"><i class="fa fa-gears"></i>Configuration</a></li>
        <li><a href="#_database"><i class="fa fa-hdd-o"></i>Database</a></li>
        <li><a href="#_folders"><i class="fa fa-folder-open"></i>Folders</a></li>
        <li><a href="#_info"><i class="fa fa-info-circle"></i>Info</a></li>
        <li><a href="#_migration"><i class="fa fa-plane"></i>Migration</a></li>
    </ul>
</div>

<div class="container-fluid">
	<div class="row">
        <div class="col-md-4 col-md-offset-4">
            {% embed 'BackendBundle::block_title.html.twig' %}
                {% block block_title %}
                    <span><i class="fa fa-sign-in"></i>Login</span>
                {% endblock %}
            {% endembed %}

            <div class="block">
                <form action="#" method="post" accept-charset="utf-8">
                    <p>
                    <label for="mbr_login">Email *</label>		<input type="text" name="mbr_login" value="" id="mbr_login" class="inputtext required" />
                    </p>
                    <p>
                    <label for="mbr_password">Password *</label>		<input type="password" name="mbr_password" value="" id="mbr_password" class="inputpassword required" />
                    </p>
                    <p>
                    <span class="label">&nbsp;</span>
                    <input type="submit" name="submit" value="Submit" class="inputsubmit" />
                    </p>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid">
	<div class="row">
        <div class="col-lg-12">
            {% embed 'BackendBundle::block_title.html.twig' %}
                {% block block_title %}
                    <span><i class="fa fa-picture-o"></i>{{ 'test1.test2'|trans({}, 'backend') }} (1-100/2864)</span>
                {% endblock %}
                {% block block_title_actions %}
                    <li><a href="#"><i class="fa fa-ban"></i>Reset</a></li>
                    <li><a title="Màj + f" role="button" data-toggle="collapse" href="#collapseExample" aria-expanded="true" aria-controls="collapseExample"><i class="fa fa-search"></i>Rechercher</a></li>
                    <li><a href="#"><i class="fa fa-plus"></i>Ajouter</a></li>
                    <li><a href="#"><i class="fa fa-bar-chart-o"></i>Statistiques</a></li>
                    <li><a href="#"><i class="fa fa-camera"></i>Medias</a></li>
                {% endblock %}
            {% endembed %}

            <div class="block collapse" id="collapseExample">
                <form action="#artists?arg=thumbs:" method="post" accept-charset="utf-8">
                <div class="row">
                    <div class="col-lg-4">
                        <p>
                            <label for="works_wrk_title">Titre original</label>
                            <input type="text" name="works_works_wrk_title" value="" id="works_wrk_title" class="inputtext focus">
                        </p>
                    </div>
                    <div class="col-lg-4">
                        <p>
                            <label for="artists_art_portrait">Portrait</label>
                            <select name="artists_artists_art_portrait" id="artists_art_portrait" class="select">
                            <option value="" selected="selected"></option>
                            <option value="1">Oui</option>
                            <option value="0">Non</option>
                            </select>
                        </p>
                    </div>
                    <div class="col-lg-4">
                        <p>
                            <label for="artists_art_iswebsite">Sur le site ?</label>
                            <select name="artists_artists_art_iswebsite" id="artists_art_iswebsite" class="select">
                            <option value=""></option>
                            <option value="1" selected="selected">Oui</option>
                            <option value="0">Non</option>
                            </select>
                        </p>
                        <p>
                            <input type="submit" name="submit" value="Valider" class="inputsubmit" />
                        </p>
                    </div>
                </div>
                </form>
            </div>

            <div class="block">
                {% embed 'BackendBundle::table.html.twig' with {'table_actions': true, 'row_actions': true} %}
                    {% block table_actions %}
                        <div>
                            <button name="submit" type="button" data-href="#select" data-id="works-works" class="inputsubmit submitcheckbox"><i class="fa fa-shopping-cart"></i>Sélectionner</button>
                        </div>
                        <div>
                            <button name="submit" type="button" data-href="#merge" data-id="works-works" class="inputsubmit submitcheckbox"><i class="fa fa-chain"></i>Fusionner</button>
                        </div>
                    {% endblock %}

                    {% block table_head %}
                        <th class=""><a href="#">ID</a></th>
                        <th class="sort_asc"><a href="#"><i class="fa fa-sort-alpha-desc"></i>Nom</a></th>
                        <th class=""><a href="#">Prénom</a></th>
                        <th class=""><a href="#">Catégories</a></th>
                        <th class=""><a href="#">Sur le site ?</a></th>
                        <th class=""><a href="#">E-mail</a></th>
                        <th class=""><a href="#">Téléphone</a></th>
                        <th class=""><a href="#">Adresse</a></th>
                    {% endblock %}

                    {% block table_row %}
                        <td><a href="#">{{ object.index }}</a></td>
                        <td><a href="#">xxx</a></td>
                        <td>xxx</td>
                        <td>xxx</td>
                        <td>Oui</td>
                        <td><a href="mailto:xxx">xxxx</a></td>
                        <td>xxx</td>
                        <td>xxx</td>
                    {% endblock %}

                    {% block table_row_actions %}
                        <a href="#"><i class="fa fa-wrench"></i>Update</a>
                        <a href="#"><i class="fa fa-trash"></i>Delete</a>
                    {% endblock %}
                {% endembed %}
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block style %}
    {{ parent() }}
{% endblock %}

{% block script %}
    {{ parent() }}
{% endblock %}
