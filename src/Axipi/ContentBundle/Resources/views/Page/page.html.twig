{% extends 'AxipiContentBundle::base.html.twig' %}

{% block main %}
    <!-- Content / Page -->
    <section class="main">
        <header>
            <h1>{{ page.title }}</h1>
            {% if page.attribute('image') %}
                <p><img src="{{ relative_path('uploads/' ~ page.attribute('image'))|imagine_filter('banner') }}" alt=""></p>
            {% endif %}
        </header>

        <article>
            {{ convertText(page.attribute('description')|raw) }}
        </article>
    </section>
    <!-- Content / Page (end) -->
{% endblock %}

{% block meta %}
    {{ parent() }}
    {{ page.meta|raw }}
{% endblock %}

{% block style %}
    {{ parent() }}
    {{ page.style|raw }}
{% endblock %}

{% block script %}
    {{ parent() }}
    {{ page.script|raw }}
{% endblock %}
