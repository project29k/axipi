<!-- Content / Breadcrumbs -->
{% if page.parent %}
    <div id="widget-{{ widget.code }}" class="col-lg-12">
        <ol class="breadcrumb">
            {% if page.parent.parent %}
                {% if page.parent.parent.parent %}
                    <li><a href="{{ path('axipi_core_slug', {slug: page.parent.parent.parent.slug}) }}">{{ page.parent.parent.parent.title }}</a></li>
                {% endif %}
                <li><a href="{{ path('axipi_core_slug', {slug: page.parent.parent.slug}) }}">{{ page.parent.parent.title }}</a></li>
            {% endif %}
            <li><a href="{{ path('axipi_core_slug', {slug: page.parent.slug}) }}">{{ page.parent.title }}</a></li>
            <li>{{ page.title }}</li>
        </ol>
    </div>

    {% set position = 1 %}
    <script type="application/ld+json">
    {
        "@context": "http://schema.org",
        "@type": "BreadcrumbList",
        "itemListElement": [
{% if page.parent.parent %}
{% if page.parent.parent.parent %}
            {
                "@type": "ListItem",
                "position": {{ position }},
                "item": {
                    "@id": "{{ url('axipi_core_slug', {slug: page.parent.parent.parent.slug}) }}",
                    "name": "{{ page.parent.parent.parent.title }}"
                }
            },
{% set position = position + 1 %}
{% endif %}
            {
                "@type": "ListItem",
                "position": {{ position }},
                "item": {
                    "@id": "{{ url('axipi_core_slug', {slug: page.parent.parent.slug}) }}",
                    "name": "{{ page.parent.parent.title }}"
                }
            },
{% set position = position + 1 %}
{% endif %}
            {
                "@type": "ListItem",
                "position": {{ position }},
                "item": {
                    "@id": "{{ url('axipi_core_slug', {slug: page.parent.slug}) }}",
                    "name": "{{ page.parent.title }}"
                }
            },
{% set position = position + 1 %}
            {
                "@type": "ListItem",
                "position": {{ position }},
                "item": {
                    "@id": "{{ url('axipi_core_slug', {slug: page.slug}) }}",
                    "name": "{{ page.title }}"
                }
            }
        ]
    }
    </script>

{% else %}
    {% set position = 1 %}
    <script type="application/ld+json">
    {
        "@context": "http://schema.org",
        "@type": "BreadcrumbList",
        "itemListElement": [
            {
                "@type": "ListItem",
                "position": {{ position }},
                "item": {
                    "@id": "{{ url('axipi_core_slug', {slug: page.slug}) }}",
                    "name": "{{ page.title }}"
                }
            }
        ]
    }
    </script>
{% endif %}
<!-- Content / Breadcrumbs (end) -->
