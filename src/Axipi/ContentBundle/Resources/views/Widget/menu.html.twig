{% import '@AxipiContent/Widget/menu_macro.html.twig' as helper %}
<!-- Content / Menu -->
<div class="widget{% if widget.attribute('div_class') %} {{ widget.attribute('div_class') }}{% endif %}" id="widget-{{ widget.id }}">
    {% if widget.attribute('display_title')|default(false) %}
        <{{ widget.attribute('title_tag')|default('h1') }}>{{ widget.title }}</{{ widget.attribute('title_tag')|default('h1') }}>
    {% endif %}
    <ul{% if widget.attribute('ul_class') %} class="{{ widget.attribute('ul_class') }}"{% endif %}>
        {% for relation in relations %}
            <li{% if page.slug == relation.page.slug %} class="active"{% endif %}>
                <a href="{{ buildLink(relation.page) }}">{{ relation.title|default(relation.page.title) }}</a>
                {%if relation.children %}
                    {{ helper.menu_loop(relation, page) }}
                {% endif %}
            </li>
        {% endfor %}
    </ul>
</div>
<!-- Content / Menu (end) -->
