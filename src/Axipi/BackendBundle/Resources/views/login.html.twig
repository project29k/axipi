{% extends 'AxipiBackendBundle::base.html.twig' %}

{% block body %}
<div class="container-fluid">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            {% if error %}
                <div class="alert alert-danger" role="alert">
                    <p>{{ error.message }}</p>
                </div>
            {% endif %}

            {% embed 'AxipiBackendBundle::block_title.html.twig' %}
                {% block block_title %}
                    <span><i class="fa fa-sign-in"></i>{{ 'login'|trans({}, 'axipi_backend') }}</span>
                {% endblock %}
                {% block block_title_actions %}
                    <li><a href="#"><i class="fa fa-key"></i>{{ 'forgot_password'|trans({}, 'axipi_backend') }}</a></li>
                {% endblock %}
            {% endembed %}

            <div class="block">
                <form action="{{ path('axipi_backend_login_check') }}" method="post">
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                    <p>
                    <label for="email">Email *</label><input type="text" name="email" value="" id="email" class="inputtext required">
                    </p>
                    <p>
                    <label for="password">Password *</label><input type="password" name="password" value="" id="password" class="inputpassword required">
                    </p>
                    <p>
                    <input type="submit" name="submit" value="Submit" class="inputsubmit">
                    </p>
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block style %}
    {{ parent() }}
{% endblock %}

{% block script %}
    {{ parent() }}
{% endblock %}
