{% extends 'AxipiBackendBundle::base.html.twig' %}

{% import '@AxipiBackend/Widget/macro.html.twig' as helper %}

{% block title %}{{ widget.title }} - {{ 'widgets'|trans({}, 'axipi_backend') }}{% endblock %}

{% block body %}
    {% embed 'AxipiBackendBundle::card.html.twig' %}
        {% block card__actions %}
            <a class="mdl-button mdl-color--pink mdl-color-text--white" href="{{ path('axipi_backend_widgets', {language: app.request.get('language'), action: 'update', 'id': widget.id}) }}">{{ 'actions.update'|trans({}, 'axipi_backend') }}</a>
            <a class="mdl-button mdl-color--pink mdl-color-text--white" href="{{ path('axipi_backend_widgets', {language: app.request.get('language'), action: 'delete', 'id': widget.id}) }}">{{ 'actions.delete'|trans({}, 'axipi_backend') }}</a>
        {% endblock %}
        {% block card__title %}
            <span><a class="mdl-color-text--pink" href="{{ path('axipi_backend_widgets', {language: app.request.get('language'), action: 'index'}) }}"><i class="fa fa-{{ 'icons.widget'|trans({}, 'axipi_backend') }}"></i>{{ 'widgets'|trans({}, 'axipi_backend') }}</a></span>
            {% if widget.parent %}
                {{ helper.path_loop(widget.parent, app.request.get('language')) }}
            {% endif %}
            <span>{{ widget.title }}</span>
        {% endblock %}
        {% block card__supporting %}
            <div class="mdl-cell mdl-cell--4-col">
                {% if widget.language %}
                    {{ macro.read_field('item.language'|trans({}, 'axipi_backend'), widget.language.title) }}
                {% else %}
                    {{ macro.read_field('item.language'|trans({}, 'axipi_backend'), 'any_language'|trans({}, 'axipi_backend')) }}
                {% endif %}
                {{ macro.read_field('item.component'|trans({}, 'axipi_backend'), widget.component.title) }}
                {{ macro.read_field('item.template'|trans({}, 'axipi_backend'), widget.template) }}
                {% if widget.parent %}{{ macro.read_field('item.parent'|trans({}, 'axipi_backend'), widget.parent.title) }}{% endif %}
                {{ macro.read_field('item.code'|trans({}, 'axipi_backend'), widget.code) }}
                {{ macro.read_field('item.ordering'|trans({}, 'axipi_backend'), widget.ordering) }}
                {{ macro.read_field('item.title'|trans({}, 'axipi_backend'), widget.title) }}
                {% if widget.zone %}{{ macro.read_field('item.zone'|trans({}, 'axipi_backend'), widget.zone.code) }}{% endif %}
                {{ macro.read_field('item.isActive'|trans({}, 'axipi_backend'), widget.isActive) }}
            </div>
            <div class="mdl-cell mdl-cell--8-col">
                {% set attributes = widget.component.attributesSchema|jsonDecode %}
                {% for k, v in attributes %}
                    {{ macro.read_field(k, widget.attribute(k)) }}
                {% endfor %}
            </div>
        {% endblock %}
    {% endembed %}

    {% embed 'AxipiBackendBundle::card.html.twig' with {sortzone: true} %}
        {% block card__actions %}
            <a class="mdl-button mdl-color--pink mdl-color-text--white" href="{{ path('axipi_backend_relations', {language: app.request.get('language'), action: 'create', 'id': widget.id}) }}">{{ 'actions.create'|trans({}, 'axipi_backend') }}</a>
        {% endblock %}
        {% block card__title %}
            <span><i class="fa fa-{{ 'icons.relation'|trans({}, 'axipi_backend') }}"></i>{{ 'relations'|trans({}, 'axipi_backend') }}</span>
        {% endblock %}
        {% block card__supporting %}
            {% for object in relations %}
                <div class="mdl-cell mdl-cell--2-col dragitem">
                    <a href="{{ path('axipi_backend_relations', {language: app.request.get('language'), action: 'read', id: object.id}) }}"><i class="fa fa-3x fa-{{ object.page.component.icon }}"></i><br>{{ object.page.title }}</a>
                </div>
            {% endfor %}
        {% endblock %}
    {% endembed %}

    {% embed 'AxipiBackendBundle::card.html.twig' with {toggle: true, id: 'widgets-create'} %}
        {% block card__actions %}
            <a class="mdl-button mdl-color--pink mdl-color-text--white toggle" href="#widgets-create">{{ 'actions.close'|trans({}, 'axipi_backend') }}</a>
        {% endblock %}
        {% block card__supporting %}
            {% for component in components %}
                <div class="mdl-cell mdl-cell--2-col">
                    <a href="{{ path('axipi_backend_widgets', {language: app.request.get('language'), action: 'create', id: component.id, parent: widget.id}) }}"><i class="fa fa-3x fa-{{ component.icon }}"></i><br>{{ component.title }}</a>
                </div>
            {% endfor %}
        {% endblock %}
    {% endembed %}

    {% embed 'AxipiBackendBundle::card.html.twig' with {id: 'ajax-upload-result'} %}
        {% block card__actions %}
            <a class="mdl-button mdl-color--pink mdl-color-text--white toggle" href="#widgets-create">{{ 'actions.create'|trans({}, 'axipi_backend') }}</a>
        {% endblock %}
        {% block card__title %}
            <span><i class="fa fa-{{ 'icons.widget'|trans({}, 'axipi_backend') }}"></i>{{ 'item.children'|trans({}, 'axipi_backend') }}</span>
        {% endblock %}
        {% block card__supporting %}
            {% if widget.children|length %}
                {% for object in widget.children %}
                <div class="mdl-cell mdl-cell--2-col">
                    {% if object.component.category == 'page' %}
                        <a href="{{ path('axipi_backend_pages', {mode: mode, language: app.request.get('language'), action: 'read', id: object.id}) }}"><i class="fa fa-3x fa-{{ object.component.icon }}"></i><br>{{ object.title }}</a>
                    {% else %}
                        <a href="{{ path('axipi_backend_widgets', {language: app.request.get('language'), action: 'read', id: object.id}) }}"><i class="fa fa-3x fa-{{ object.component.icon }}"></i><br>{{ object.title }}</a>
                    {% endif %}
                </div>
                {% endfor %}
            {% endif %}
        {% endblock %}
    {% endembed %}

    {% embed 'AxipiBackendBundle::card.html.twig' %}
        {% block card__title %}
            <span><i class="fa fa-download"></i>{{ 'drag_drop'|trans({}, 'axipi_backend') }} <small>Drop file(s) over icon</small></span>
        {% endblock %}
        {% block card__supporting %}
            {% if widget.component.id == 31 %}
                <div class="mdl-cell mdl-cell--2-col" data-url="{{ path('axipi_backend_widgets', {language: app.request.get('language'), action: 'upload'}) }}" id="ajax-uploader" data-parent="{{ widget.id }}" data-component="32">
                    <a class="fileinput-button attachment-upload" href="#"><i class="fa fa-3x fa-picture-o"></i><br>Slideshow / Slide</a>
                </div>
            {% endif %}
        {% endblock %}
    {% endembed %}
{% endblock %}

{% block style %}
    {{ parent() }}
{% endblock %}

{% block script %}
    {{ parent() }}
    <script type="text/javascript" src="{{ asset('vendor/jquery-ui/ui/minified/core.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('vendor/jquery-ui/ui/minified/mouse.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('vendor/jquery-ui/ui/minified/sortable.min.js') }}"></script>

    <script type="text/javascript">
    $('.sortzone').sortable({
        forcePlaceholderSize: true,
        cursor: "move",
        helper: "clone",
        appendTo: "#target-drag",
        zIndex: 9999,
        tolerance: "pointer",
        items: "div:not(.placeholder)",
        stop: function(event, ui) {
            console.log(event);
        }
    });
    </script>
{% endblock %}
