{% extends 'AxipiBackendBundle::base.html.twig' %}

{% block title %}{{ widget.title }} - {{ 'widgets'|trans({}, 'axipi_backend') }}{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            {% embed 'AxipiBackendBundle::block_title.html.twig' %}
                {% block block_title %}
                    <span><a href="{{ path('axipi_backend_widget', {action: 'index'}) }}"><i class="fa fa-{{ 'icons.widget'|trans({}, 'axipi_backend') }}"></i>{{ 'widgets'|trans({}, 'axipi_backend') }}</a></span>
                    <span><i class="fa fa-{{ widget.component.icon }}"></i>{{ widget.title }}</span>
                {% endblock %}
                {% block block_title_actions %}
                    <li><a href="{{ path('axipi_backend_widget', {action: 'update', 'id': widget.id}) }}"><i class="fa fa-{{ 'icons.update'|trans({}, 'axipi_backend') }}"></i>{{ 'actions.update'|trans({}, 'axipi_backend') }}</a></li>
                    <li><a href="{{ path('axipi_backend_widget', {action: 'delete', 'id': widget.id}) }}"><i class="fa fa-{{ 'icons.delete'|trans({}, 'axipi_backend') }}"></i>{{ 'actions.delete'|trans({}, 'axipi_backend') }}</a></li>
                {% endblock %}
            {% endembed %}

            <div class="block">
                <div class="row">
                    <div class="col-lg-4">
                        {{ macro.read_field('widget.language'|trans({}, 'axipi_backend'), widget.language.title) }}
                        {{ macro.read_field('widget.component'|trans({}, 'axipi_backend'), '<a href="' ~ path('axipi_backend_component', {action: 'read', 'id': widget.component.id}) ~ '">' ~ widget.component.title ~'</a>') }}
                        {{ macro.read_field('widget.template'|trans({}, 'axipi_backend'), widget.template) }}
                        {{ macro.read_field('widget.code'|trans({}, 'axipi_backend'), widget.code) }}
                        {{ macro.read_field('widget.ordering'|trans({}, 'axipi_backend'), widget.ordering) }}
                    </div>
                    <div class="col-lg-4">
                        {{ macro.read_field('widget.title'|trans({}, 'axipi_backend'), widget.title) }}
                        {{ macro.read_field('widget.zone'|trans({}, 'axipi_backend'), widget.zone.code) }}
                        {{ macro.read_field('widget.isActive'|trans({}, 'axipi_backend'), widget.isActive) }}
                    </div>
                </div>
            </div>

            {% embed 'AxipiBackendBundle::block_title.html.twig' %}
                {% block block_title %}
                    <span><i class="fa fa-{{ 'icons.page'|trans({}, 'axipi_backend') }}"></i>{{ 'pages'|trans({}, 'axipi_backend') }} ({{ objects|length }})</span>
                {% endblock %}
                {% block block_title_actions %}
                    <li><a href="{{ path('axipi_backend_widget_page', {action: 'create', 'id': widget.id}) }}"><i class="fa fa-{{ 'icons.create'|trans({}, 'axipi_backend') }}"></i>{{ 'actions.create'|trans({}, 'axipi_backend') }}</a></li>
                {% endblock %}
            {% endembed %}

            <div class="block">
                <div class="row">
                    {% for object in objects %}
                        <div class="col-lg-2 col-sm-3 text-center">
                            <a class="thumbnail" href="{{ path('axipi_backend_widget_page', {action: 'read', id: object.id}) }}"><i class="fa fa-4x fa-{{ object.page.component.icon }}"></i><br>{{ object.page.title }} ({{ object.ordering }})</a>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block style %}
    {{ parent() }}
{% endblock %}

{% block script %}
    {{ parent() }}
{% endblock %}
