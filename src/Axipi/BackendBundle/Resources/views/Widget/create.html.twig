{% extends 'AxipiBackendBundle::base.html.twig' %}

{% block title %}{{ 'widgets'|trans({}, 'axipi_backend') }}{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            {% embed 'AxipiBackendBundle::block_title.html.twig' %}
                {% block block_title %}
                    <span><a href="{{ path('axipi_backend_widget', {action: 'index'}) }}"><i class="fa fa-{{ 'icons.widget'|trans({}, 'axipi_backend') }}"></i>{{ 'widgets'|trans({}, 'axipi_backend') }}</a></span>
                    <span><i class="fa fa-{{ 'icons.create'|trans({}, 'axipi_backend') }}"></i>{{ 'actions.create'|trans({}, 'axipi_backend') }}</span>
                {% endblock %}
                {% block block_title_actions %}
                {% endblock %}
            {% endembed %}

            <div class="block">
                {{ form_start(form) }}
                {{ form_errors(form) }}
                <div class="row">
                    <div class="col-lg-4">
                        {{ form_row(form.program) }}
                        {{ form_row(form.component) }}
                        {{ form_row(form.code) }}
                        {{ form_row(form.title) }}
                        {{ form_row(form.zone) }}
                    </div>
                    <div class="col-lg-4">
                        {{ form_row(form.isActive) }}
                        {{ form_row(form.attributes) }}
                        <div id="editor_holder"></div>
                        {{ form_row(form.submit) }}
                    </div>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block style %}
    {{ parent() }}
{% endblock %}

{% block script %}
    {{ parent() }}
    <script>
    $('#widget_attributes').hide();

    var editor = new JSONEditor(document.getElementById('editor_holder'), {
        theme: 'bootstrap3',
        disable_collapse: true,
        disable_edit_json: true,
        disable_properties: true,
        schema: {{ component.attributesSchema|raw }}
    });

    $('form[name="widget"]').bind('submit', function(event) {
        $('#widget_attributes').val( JSON.stringify( editor.getValue() ) );
    });
    </script>
{% endblock %}
