{% extends 'AxipiBackendBundle::base.html.twig' %}

{% block title %}{{ 'widgets'|trans({}, 'axipi_backend') }} ({{ app.request.get('language') }}){% endblock %}

{% block body %}
    <div class="mdl-grid">
        <div class="mdl-tabs">
            <div class="mdl-tabs__tab-bar">
                {% for language in languages %}
                    <a href="{{ path('axipi_backend_widgets', {language: language.code, action: 'index'}) }}" class="mdl-tabs__tab{% if app.request.get('language') == language.code %} is-active{% endif %}">{{ language.title }}</a>
                {% endfor %}
            </div>
        </div>

        {% embed 'AxipiBackendBundle::card.html.twig' with {toggle: true, id: 'widgets-create'} %}
            {% block card__actions %}
                <a class="mdl-button mdl-color--pink mdl-color-text--white toggle" href="#widgets-create">{{ 'actions.close'|trans({}, 'axipi_backend') }}</a>
            {% endblock %}
            {% block card__supporting %}
                {% for component in components %}
                    <div class="mdl-cell mdl-cell--2-col">
                        <a href="{{ path('axipi_backend_widgets', {language: app.request.get('language'), action: 'create', id: component.id}) }}"><i class="fa fa-4x fa-{{ component.icon }}"></i><br>{{ component.title }}</a>
                    </div>
                {% endfor %}
            {% endblock %}
        {% endembed %}

        {% embed 'AxipiBackendBundle::card.html.twig' %}
            {% block card__actions %}
                <a class="mdl-button mdl-color--pink mdl-color-text--white toggle" href="#widgets-create">{{ 'actions.create'|trans({}, 'axipi_backend') }}</a>
            {% endblock %}
            {% block card__title %}
                <span><i class="fa fa-{{ 'icons.widget'|trans({}, 'axipi_backend') }}"></i>{{ 'widgets'|trans({}, 'axipi_backend') }}</span>
            {% endblock %}
        {% endembed %}

        {% for zone in zones %}
            {% embed 'AxipiBackendBundle::card.html.twig' %}
                {% block card__title %}
                    <span><i class="fa fa-{{ 'icons.zone'|trans({}, 'axipi_backend') }}"></i>{{ zone.code }}</span>
                {% endblock %}
                {% block card__supporting %}
                    {% for object in zone.widgets if object.language.code == app.request.get('language') %}
                        <div class="mdl-cell mdl-cell--2-col">
                            <a href="{{ path('axipi_backend_widgets', {language: app.request.get('language'), action: 'read', id: object.id}) }}"><i class="fa fa-4x fa-{{ object.component.icon }}"></i><br>{{ object.title }}</a>
                        </div>
                    {% endfor %}
                {% endblock %}
            {% endembed %}
        {% endfor %}
    </div>
</div>
{% endblock %}

{% block style %}
    {{ parent() }}
{% endblock %}

{% block script %}
    {{ parent() }}
{% endblock %}
