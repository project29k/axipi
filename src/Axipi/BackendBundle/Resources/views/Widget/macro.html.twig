{% macro path_loop(object, language) %}
    {% import _self as helper %}

    {% if object.parent %}
        {{ helper.path_loop(object.parent, language) }}
    {% endif %}

    {% if object.component.category == 'widget' %}
        <span><a class="mdl-color-text--pink" href="{{ path('axipi_backend_widget', {language: language, action: 'read', id: object.id}) }}">{{ object.title }}</a></span>
    {% else %}
        <span><a class="mdl-color-text--pink" href="{{ path('axipi_backend_page', {language: language, action: 'read', id: object.id}) }}">{{ object.title }}</a></span>
    {% endif %}
{% endmacro %}
