{% extends 'AxipiBackendBundle::base.html.twig' %}

{% block title %}{{ 'search'|trans({}, 'axipi_backend') }}{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            {% embed 'AxipiBackendBundle::block_title.html.twig' %}
                {% block block_title %}
                    <span><i class="fa fa-{{ 'icons.search'|trans({}, 'axipi_backend') }}"></i>{{ 'search'|trans({}, 'axipi_backend') }}</span>
                {% endblock %}
                {% block block_title_actions %}
                    <li><a href="{{ path('axipi_backend_search', {action: 'init'}) }}"><i class="fa fa-{{ 'icons.init'|trans({}, 'axipi_backend') }}"></i>{{ 'actions.init'|trans({}, 'axipi_backend') }}</a></li>
                    <li><a href="{{ path('axipi_backend_search', {action: 'scan'}) }}"><i class="fa fa-{{ 'icons.init'|trans({}, 'axipi_backend') }}"></i>{{ 'actions.scan'|trans({}, 'axipi_backend') }}</a></li>
                {% endblock %}
            {% endembed %}

            {% if stats is defined %}
                {% for key, stats in stats.indices %}
                    {% embed 'AxipiBackendBundle::block_title.html.twig' %}
                        {% block block_title %}
                            <span><i class="fa fa-bolt"></i>{{ 'index'|trans({}, 'axipi_backend') }}: {{ key }}</span>
                        {% endblock %}
                        {% block block_title_actions %}
                        {% endblock %}
                    {% endembed %}

                    <div class="block">
                        <div class="row">
                            <div class="col-lg-6">
                                {{ macro.read_field('total/store/size_in_bytes', stats.total.store.size_in_bytes) }}
                                {{ macro.read_field('total/docs/count', stats.total.docs.count) }}
                                {{ macro.read_field('total/docs/deleted', stats.total.docs.deleted) }}
                            </div>
                            <div class="col-lg-6">
                                {{ macro.read_field('total/search/query_total', stats.total.search.query_total) }}
                                {{ macro.read_field('total/search/fetch_total', stats.total.search.fetch_total) }}
                            </div>
                        </div>
                    </div>
                {% endfor %}
            {% endif %}

            {% if nodes is defined %}
                {% embed 'AxipiBackendBundle::block_title.html.twig' %}
                    {% block block_title %}
                        <span><i class="fa fa-database"></i>{{ 'cluster'|trans({}, 'axipi_backend') }}: {{ nodes.cluster_name }} ({{ health.status }})</span>
                    {% endblock %}
                    {% block block_title_actions %}
                    {% endblock %}
                {% endembed %}

                <div class="block">
                    <div class="row">
                        {% for key, node in nodes.nodes %}
                            <div class="col-lg-2 col-sm-3 text-center">
                                <a class="thumbnail" href="#"><i class="fa fa-4x fa-{% if node.attributes.master == 'true' %}star{% else %}star-o{% endif %}"></i><br>{{ node.name }} ({{ node.ip }})</a>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            {% endif %}
        </div>
    </div>
</div>

{% endblock %}

{% block style %}
    {{ parent() }}
{% endblock %}

{% block script %}
    {{ parent() }}
{% endblock %}
