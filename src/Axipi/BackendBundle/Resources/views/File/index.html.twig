{% extends 'AxipiBackendBundle::base.html.twig' %}

{% block title %}{{ 'files'|trans({}, 'axipi_backend') }}{% endblock %}

{% block navbar %}
    {% if 'wysiwyg' in mode %}
    {% else %}
        {{ parent() }}
    {% endif %}
{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            {% embed 'AxipiBackendBundle::block_title.html.twig' %}
                {% block block_title %}
                    {% for tree in tree %}
                        {% if tree.slug != slug %}
                            <span><a href="{{ path('axipi_backend_file', {mode: mode, action: 'index', 'slug': tree.slug}) }}"><i class="fa fa-{{ tree.icon }}"></i>{{ tree.name }}</a></span>
                        {% else %}
                            <span><i class="fa fa-{{ tree.icon }}"></i>{{ tree.name }}</span>
                        {% endif %}
                    {% endfor %}
                {% endblock %}
                {% block block_title_actions %}
                    <li><a role="button" data-toggle="collapse" href="#collapseExample" aria-expanded="true" aria-controls="collapseExample"><i class="fa fa-{{ 'icons.create'|trans({}, 'axipi_backend') }}"></i>{{ 'actions.create'|trans({}, 'axipi_backend') }}</a></li>
                {% endblock %}
            {% endembed %}

            <div class="block collapse" id="collapseExample">
                <div class="row">
                    <div class="col-lg-2 col-sm-3 text-center">
                        <a class="thumbnail" href="{{ path('axipi_backend_file', {mode: mode, action: 'create', id: 'folder'}) }}"><i class="fa fa-4x fa-folder-o"></i><br>{{ 'folder'|trans({}, 'axipi_backend') }}</a>
                    </div>
                    <div class="col-lg-2 col-sm-3 text-center">
                        <a class="thumbnail" href="{{ path('axipi_backend_file', {mode: mode, action: 'create', id: 'file'}) }}"><i class="fa fa-4x fa-file-o"></i><br>{{ 'file'|trans({}, 'axipi_backend') }}</a>
                    </div>
                </div>
            </div>

            <div class="block">
                <div class="row">
                    {% for object in objects %}
                        <div class="col-lg-2 col-sm-3 text-center">
                            {% if object.type == 'folder' %}
                                <a class="thumbnail" href="{{ path('axipi_backend_file', {mode: mode, action: 'index', slug: object.slug}) }}"><i class="fa fa-4x fa-{{ object.icon }}"></i><br>{{ object.name }}</a>
                            {% else %}
                                {% if 'image/' in object.mime %}
                                    <a class="thumbnail{% if 'wysiwyg' in mode %} wysiwyg_image{% endif %}" {% if 'wysiwyg' in mode %}data-field_name="{{ mode|replace({'wysiwyg': ''}) }}" {% endif %}href="{{ path('axipi_backend_file', {mode: mode, action: 'read', slug: object.slug}) }}"><img src="{{ asset('files/' ~ object.slug) }}" class="img-responsive">{{ object.name }}</a>
                                {% else %}
                                    <a class="thumbnail" href="{{ path('axipi_backend_file', {mode: mode, action: 'read', slug: object.slug}) }}"><i class="fa fa-4x fa-{{ object.icon }}"></i><br>{{ object.name }}</a>
                                {% endif %}
                            {% endif %}
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block style %}
    {{ parent() }}
{% endblock %}

{% block script %}
    {{ parent() }}
{% endblock %}
