{% extends 'AxipiBackendBundle::base.html.twig' %}

{% block title %}{{ file.code }} - {{ 'files'|trans({}, 'axipi_backend') }}{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            {% embed 'AxipiBackendBundle:Bootstrap:block_title.html.twig' %}
                {% block block_title %}
                    <span><a class="mdl-color-text--pink" href="{{ path('axipi_backend_file', {action: 'index'}) }}"><i class="fa fa-{{ 'icons.file'|trans({}, 'axipi_backend') }}"></i>{{ 'files'|trans({}, 'axipi_backend') }}</a></span>
                    <span><a class="mdl-color-text--pink" href="{{ path('axipi_backend_file', {action: 'read', 'id': file.id}) }}"><i class="fa fa-{{ 'icons.file'|trans({}, 'axipi_backend') }}"></i>{{ file.code }}</a></span>
                    <span>{{ 'actions.update'|trans({}, 'axipi_backend') }}</span>
                {% endblock %}
                {% block block_title_actions %}
                    <a class="mdl-button mdl-color--pink mdl-color-text--white" href="{{ path('axipi_backend_file', {action: 'delete', 'id': file.id}) }}">{{ 'actions.delete'|trans({}, 'axipi_backend') }}</a>
                {% endblock %}
            {% endembed %}

            <div class="block">
                {{ form_start(form) }}
                {{ form_errors(form) }}
                <div class="row">
                    <div class="mdl-cell mdl-cell--4-col">
                        {{ form_row(form.code) }}
                    </div>
                    <div class="mdl-cell mdl-cell--4-col">
                        {{ form_row(form.isActive) }}
                        {{ form_row(form.submit) }}
                    </div>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block style %}
    {{ parent() }}
{% endblock %}

{% block script %}
    {{ parent() }}
{% endblock %}
