{% extends 'AxipiBackendBundle:MaterialDesignLite:base.html.twig' %}

{% block title %}{{ relation.widget.title }} - {{ 'widgets'|trans({}, 'axipi_backend') }}{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            {% embed 'AxipiBackendBundle:Bootstrap:block_title.html.twig' %}
                {% block block_title %}
                    <span><a class="mdl-color-text--pink" href="{{ path('axipi_backend_widgets', {language: app.request.get('language'), action: 'index'}) }}"><i class="fa fa-{{ 'icons.widget'|trans({}, 'axipi_backend') }}"></i>{{ 'widgets'|trans({}, 'axipi_backend') }}</a></span>
                    <span><a class="mdl-color-text--pink" href="{{ path('axipi_backend_widgets', {language: app.request.get('language'), action: 'read', 'id': relation.widget.id}) }}"><i class="fa fa-{{ relation.widget.component.icon }}"></i>{{ relation.widget.title }}</a></span>
                    <span><i class="fa fa-{{ relation.page.component.icon }}"></i>{{ relation.page.title }}</span>
                {% endblock %}
                {% block block_title_actions %}
                    <a class="mdl-button mdl-color--pink mdl-color-text--white" href="{{ path('axipi_backend_relations', {language: app.request.get('language'), action: 'update', 'id': relation.id}) }}">{{ 'actions.update'|trans({}, 'axipi_backend') }}</a>
                    <a class="mdl-button mdl-color--pink mdl-color-text--white" href="{{ path('axipi_backend_relations', {language: app.request.get('language'), action: 'delete', 'id': relation.id}) }}"><i class="fa fa-trash"></i>{{ 'actions.delete'|trans({}, 'axipi_backend') }}</a>
                {% endblock %}
            {% endembed %}

            <div class="block">
                <div class="row">
                    <div class="mdl-cell mdl-cell--4-col">
                        {{ macro.read_field('relation.page'|trans({}, 'axipi_backend'), relation.page.title) }}
                        {{ macro.read_field('relation.title'|trans({}, 'axipi_backend'), relation.title) }}
                        {{ macro.read_field('relation.ordering'|trans({}, 'axipi_backend'), relation.ordering) }}
                    </div>
                    <div class="mdl-cell mdl-cell--4-col">
                        {{ macro.read_field('relation.isActive'|trans({}, 'axipi_backend'), relation.isActive) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block style %}
    {{ parent() }}
{% endblock %}

{% block script %}
    {{ parent() }}
{% endblock %}
