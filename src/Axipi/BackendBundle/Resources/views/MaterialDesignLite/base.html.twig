{% import 'AxipiBackendBundle:MaterialDesignLite:macro.html.twig' as macro %}
{% if form is defined %}{% form_theme form 'AxipiBackendBundle:MaterialDesignLite:form.html.twig' %}{% endif %}
<!DOCTYPE html>
<html>
<head>
<title>{% block title %}Welcome!{% endblock %}</title>

{% block meta %}
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<meta http-equiv="X-Frame-Options" content="SAMEORIGIN">
<meta name="robots" content="noindex, nofollow, noarchive">
<meta name="HandheldFriendly" content="true">
<meta name="apple-mobile-web-app-capable" content="yes">
<meta name="mobile-web-app-capable" content="yes">
<meta name="theme-color" content="#30353b">
{% endblock %}

{% block style %}
<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:regular,bold,italic,thin,light,bolditalic,black,medium&amp;lang=en">
<link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
<link rel="stylesheet" type="text/css" href="{{ asset('vendor/font-awesome/css/font-awesome.min.css') }}">
<link rel="stylesheet" type="text/css" href="{{ asset('vendor/material-design-lite/material.min.css') }}">
<link rel="stylesheet" type="text/css" href="{{ asset('bundles/axipibackend/css/base-materialdesignlite.css') }}">
{% endblock %}
</head>

<body>

<div class="mdl-layout mdl-js-layout mdl-layout--fixed-header mdl-layout--fixed-drawer">
    <header class="mdl-layout__header mdl-color--teal">
        <div class="mdl-layout__header-row">
            <div class="mdl-layout-spacer">
            </div>
            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                <a class="mdl-button mdl-js-button mdl-js-ripple-effect mdl-button--icon mdl-color-text--white" href="{{ path('axipi_backend_profile', {action: 'read'}) }}"><i class="fa-lg fa fa-{{ 'icons.profile'|trans({}, 'axipi_backend') }}"></i>{{ app.user.firstname }}{% if app.user.lastname %} {{ app.user.lastname }}{% endif %}</a>
                <a class="mdl-button mdl-js-button mdl-js-ripple-effect mdl-button--icon mdl-color-text--white" href="{{ logout_path('axipi_backend') }}"><i class="fa-lg fa fa-{{ 'icons.logout'|trans({}, 'axipi_backend') }}"></i>{{ 'logout'|trans({}, 'axipi_backend') }}</a>
            {% endif %}
            <a class="mdl-button mdl-js-button mdl-js-ripple-effect mdl-button--icon mdl-color-text--white" target="_blank" href="{{ path('axipi_core_home', {}) }}"><i class="fa-lg fa fa-{{ 'icons.frontend'|trans({}, 'axipi_backend') }}"></i>{{ 'frontend'|trans({}, 'axipi_backend') }}</a>
        </div>
    </header>
    <div class="mdl-layout__drawer">
        <ul class="mdl-list">
            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                {% if is_granted('ROLE_PAGES') %}
                    <li class="mdl-list__item"><a href="{{ path('axipi_backend_pages', {action: 'index'}) }}"><i class="fa-lg fa fa-{{ 'icons.page'|trans({}, 'axipi_backend') }}"></i>{{ 'pages'|trans({}, 'axipi_backend') }}</a></li>
                {% endif %}
                {% if is_granted('ROLE_WIDGETS') %}
                    <li class="mdl-list__item"><a href="{{ path('axipi_backend_widgets', {action: 'index'}) }}"><i class="fa-lg fa fa-{{ 'icons.widget'|trans({}, 'axipi_backend') }}"></i>{{ 'widgets'|trans({}, 'axipi_backend') }}</a></li>
                {% endif %}
                {% if is_granted('ROLE_FILES') %}
                    <li class="mdl-list__item"><a href="{{ path('axipi_backend_files', {action: 'index'}) }}"><i class="fa-lg fa fa-{{ 'icons.file'|trans({}, 'axipi_backend') }}"></i>{{ 'files'|trans({}, 'axipi_backend') }}</a></li>
                {% endif %}
                {% if is_granted('ROLE_LANGUAGES') %}
                    <li class="mdl-list__item"><a href="{{ path('axipi_backend_languages', {action: 'index'}) }}"><i class="fa-lg fa fa-{{ 'icons.language'|trans({}, 'axipi_backend') }}"></i>{{ 'languages'|trans({}, 'axipi_backend') }}</a></li>
                {% endif %}
                {% if is_granted('ROLE_COMPONENTS') %}
                    <li class="mdl-list__item"><a href="{{ path('axipi_backend_components', {action: 'index'}) }}"><i class="fa-lg fa fa-{{ 'icons.component'|trans({}, 'axipi_backend') }}"></i>{{ 'components'|trans({}, 'axipi_backend') }}</a></li>
                {% endif %}
                {% if is_granted('ROLE_ZONES') %}
                    <li class="mdl-list__item"><a href="{{ path('axipi_backend_zones', {action: 'index'}) }}"><i class="fa-lg fa fa-{{ 'icons.zone'|trans({}, 'axipi_backend') }}"></i>{{ 'zones'|trans({}, 'axipi_backend') }}</a></li>
                {% endif %}
                {% if is_granted('ROLE_SEARCH') %}
                    <li class="mdl-list__item"><a href="{{ path('axipi_backend_search', {action: 'index'}) }}"><i class="fa-lg fa fa-{{ 'icons.search'|trans({}, 'axipi_backend') }}"></i>{{ 'search'|trans({}, 'axipi_backend') }}</a></li>
                {% endif %}
                {% if is_granted('ROLE_USERS') %}
                    <li class="mdl-list__item"><a href="{{ path('axipi_backend_users', {action: 'index'}) }}"><i class="fa-lg fa fa-{{ 'icons.user'|trans({}, 'axipi_backend') }}"></i>{{ 'users'|trans({}, 'axipi_backend') }}</a></li>
                {% endif %}
                {% if is_granted('ROLE_INFO') %}
                    <li class="mdl-list__item"><a href="{{ path('axipi_backend_info', {action: 'index'}) }}"><i class="fa-lg fa fa-{{ 'icons.info'|trans({}, 'axipi_backend') }}"></i>{{ 'info'|trans({}, 'axipi_backend') }}</a></li>
                {% endif %}
            {% endif %}
        </ul>
    </div>

    {% block navbar %}
    {% endblock %}

    <div class="container-fluid">
        {% for type, flashes in app.session.flashbag.all() %}
            {% for flash in flashes %}
                <div class="alert alert-{{ type }}" role="alert">
                    <p>{{ flash }}</p>
                </div>
            {% endfor %}
        {% endfor %}
    </div>

    <main class="mdl-layout__content mdl-color--grey-100">
        {% block body %}
        {% endblock %}
    </main>
</div>

{% block script %}
<script type="text/javascript">
var app_environment = '{{ app.environment }}';
var app_request_locale = '{{ app.request.locale }}';
var app_request_uri = '{{ app.request.uri }}';
var axipi_core_home = '{{ url('axipi_core_home') }}';
var axipi_backend_home = '{{ url('axipi_backend_home') }}';
</script>
<script type="text/javascript" src="{{ asset('vendor/jquery/dist/jquery.min.js') }}"></script>
<script type="text/javascript" src="{{ asset('vendor/jquery-ui/ui/minified/widget.min.js') }}"></script>
<script type="text/javascript" src="{{ asset('vendor/material-design-lite/material.min.js') }}"></script>
<script type="text/javascript" src="{{ asset('vendor/blueimp-file-upload-node/js/jquery.iframe-transport.js') }}"></script>
<script type="text/javascript" src="{{ asset('vendor/blueimp-file-upload-node/js/jquery.fileupload.js') }}"></script>
<script type="text/javascript" src="{{ asset('vendor/tinymce-dist/tinymce.min.js') }}"></script>
<script type="text/javascript" src="{{ asset('bundles/axipibackend/js/base.js') }}"></script>
{% endblock %}

</body>
</html>
