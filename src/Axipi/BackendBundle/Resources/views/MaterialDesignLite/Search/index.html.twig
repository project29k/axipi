{% extends 'AxipiBackendBundle:MaterialDesignLite:base.html.twig' %}

{% block title %}{{ 'search'|trans({}, 'axipi_backend') }}{% endblock %}

{% block body %}
    <div class="mdl-grid">
        {% embed 'AxipiBackendBundle:MaterialDesignLite:block_title.html.twig' %}
            {% block block_title %}
                <span><i class="fa fa-{{ 'icons.search'|trans({}, 'axipi_backend') }}"></i>{{ 'search'|trans({}, 'axipi_backend') }}</span>
            {% endblock %}
            {% block block_title_actions %}
                {% if enabled %}
                    <a class="mdl-button mdl-js-button mdl-js-ripple-effect mdl-button--icon" href="{{ path('axipi_backend_search', {action: 'init'}) }}"><i class="fa fa-{{ 'icons.initialize'|trans({}, 'axipi_backend') }}"></i>{{ 'actions.initialize'|trans({}, 'axipi_backend') }}</a>
                    <a class="mdl-button mdl-js-button mdl-js-ripple-effect mdl-button--icon"  href="{{ path('axipi_backend_search', {action: 'scan'}) }}"><i class="fa fa-{{ 'icons.refresh'|trans({}, 'axipi_backend') }}"></i>{{ 'actions.refresh'|trans({}, 'axipi_backend') }}</a>
                {% endif %}
            {% endblock %}
        {% endembed %}

        {% if enabled %}
            {% if stats is defined and stats.indices is defined %}
                {% for key, stats in stats.indices %}
                    {% embed 'AxipiBackendBundle:MaterialDesignLite:block_title.html.twig' %}
                        {% block block_title %}
                            <span><i class="fa fa-bolt"></i>{{ 'backend.index'|trans({}, 'axipi_search') }}: {{ key }}</span>
                        {% endblock %}
                        {% block block_title_actions %}
                        {% endblock %}
                    {% endembed %}

                    <div class="mdl-card mdl-shadow--2dp mdl-color--white mdl-cell mdl-cell--4-col">
                        <div class="mdl-card__supporting-text mdl-color-text--black">
                            {{ macro.read_field('total.store.size_in_bytes', stats.total.store.size_in_bytes) }}
                            {{ macro.read_field('total.docs.count', stats.total.docs.count) }}
                            {{ macro.read_field('total.docs.deleted', stats.total.docs.deleted) }}
                        </div>
                    </div>
                    <div class="mdl-card mdl-shadow--2dp mdl-color--white mdl-cell mdl-cell--4-col">
                        <div class="mdl-card__supporting-text mdl-color-text--black">
                            {{ macro.read_field('total.search.query_total', stats.total.search.query_total) }}
                            {{ macro.read_field('total.search.fetch_total', stats.total.search.fetch_total) }}
                        </div>
                    </div>
                {% endfor %}
            {% endif %}

            {% if health is defined %}
                {% embed 'AxipiBackendBundle:MaterialDesignLite:block_title.html.twig' %}
                    {% block block_title %}
                        <span><i class="fa fa-database"></i>{{ 'backend.cluster'|trans({}, 'axipi_search') }}: {{ health.cluster_name }}</span>
                    {% endblock %}
                    {% block block_title_actions %}
                    {% endblock %}
                {% endembed %}

                <div class="mdl-card mdl-shadow--2dp mdl-color--white mdl-cell mdl-cell--4-col">
                    <div class="mdl-card__supporting-text mdl-color-text--black">
                        {{ macro.read_field('status', health.status) }}
                        {{ macro.read_field('number_of_nodes', health.number_of_nodes) }}
                    </div>
                </div>
                <div class="mdl-card mdl-shadow--2dp mdl-color--white mdl-cell mdl-cell--4-col">
                    <div class="mdl-card__supporting-text mdl-color-text--black">
                        {{ macro.read_field('active_primary_shards', health.active_primary_shards) }}
                        {{ macro.read_field('active_shards', health.active_shards) }}
                    </div>
                </div>
            {% endif %}

            {% if nodes is defined %}
                {% for key, node in nodes.nodes %}
                    {% embed 'AxipiBackendBundle:MaterialDesignLite:block_title.html.twig' %}
                        {% block block_title %}
                            <span><i class="fa fa-server"></i>{{ 'backend.node'|trans({}, 'axipi_search') }}: {{ node.name }}</span>
                        {% endblock %}
                        {% block block_title_actions %}
                        {% endblock %}
                    {% endembed %}

                    <div class="mdl-card mdl-shadow--2dp mdl-color--white mdl-cell mdl-cell--4-col">
                        <div class="mdl-card__supporting-text mdl-color-text--black">
                            {{ macro.read_field('attributes.master', node.attributes.master) }}
                            {{ macro.read_field('ip', node.ip) }}
                            {{ macro.read_field('version', node.version) }}
                        </div>
                    </div>
                    <div class="mdl-card mdl-shadow--2dp mdl-color--white mdl-cell mdl-cell--4-col">
                        <div class="mdl-card__supporting-text mdl-color-text--black">
                            {{ macro.read_field('os.name', node.os.name) }}
                            {{ macro.read_field('os.arch', node.os.arch) }}
                            {{ macro.read_field('os.version', node.os.version) }}
                        </div>
                    </div>
                {% endfor %}
            {% endif %}
        {% else %}
            <div class="mdl-card mdl-shadow--2dp mdl-color--white mdl-cell mdl-cell--12-col">
                <div class="mdl-card__supporting-text mdl-color-text--black">
                    <p>Disabled</p>
                </div>
            </div>
        {% endif %}
    </div>
{% endblock %}

{% block style %}
    {{ parent() }}
{% endblock %}

{% block script %}
    {{ parent() }}
{% endblock %}
