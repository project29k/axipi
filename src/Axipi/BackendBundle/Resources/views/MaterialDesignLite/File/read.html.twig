{% extends 'AxipiBackendBundle:MaterialDesignLite:base.html.twig' %}

{% block title %}{{ file.name }} - {{ 'files'|trans({}, 'axipi_backend') }}{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            {% embed 'AxipiBackendBundle:Bootstrap:block_title.html.twig' %}
                {% block block_title %}
                    {% for tree in tree %}
                        {% if tree.slug != file.slug %}
                            <span><a class="mdl-color-text--pink" href="{{ path('axipi_backend_files', {action: 'index', 'slug': tree.slug}) }}"><i class="fa fa-folder"></i>{{ tree.name }}</a></span>
                        {% endif %}
                    {% endfor %}
                    <span><i class="fa fa-{{ file.icon }}"></i>{{ file.name }}</span>
                {% endblock %}
                {% block block_title_actions %}
                    <a class="mdl-button mdl-color--pink mdl-color-text--white" href="{{ path('axipi_backend_files', {action: 'update', 'slug': file.slug}) }}">{{ 'actions.update'|trans({}, 'axipi_backend') }}</a>
                    <a class="mdl-button mdl-color--pink mdl-color-text--white" href="{{ path('axipi_backend_files', {action: 'delete', 'slug': file.slug}) }}">{{ 'actions.delete'|trans({}, 'axipi_backend') }}</a>
                {% endblock %}
            {% endembed %}

            <div class="block">
                <div class="row">
                    <div class="mdl-cell mdl-cell--4-col">
                        {{ macro.read_field('file.name'|trans({}, 'axipi_backend'), file.name) }}
                        {{ macro.read_field('file.size'|trans({}, 'axipi_backend'), file.size) }}
                        {{ macro.read_field('file.mime'|trans({}, 'axipi_backend'), file.mime) }}
                    </div>
                    <div class="mdl-cell mdl-cell--4-col">
                        {% if 'image/' in file.mime %}
                            <img src="{{ asset('files/' ~ file.slug) }}" class="img-responsive">
                        {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block style %}
    {{ parent() }}
{% endblock %}

{% block script %}
    {{ parent() }}
{% endblock %}
