{% extends 'AxipiBackendBundle:MaterialDesignLite:base.html.twig' %}

{% block title %}{{ 'home'|trans({}, 'axipi_backend') }}{% endblock %}

{% block body %}
    <div class="mdl-grid">
        <div class="mdl-card mdl-shadow--2dp mdl-color--white mdl-cell mdl-cell--12-col">
            <div class="mdl-card__title">
                <h1 class="mdl-card__title-text">
                    <span><i class="fa fa-{{ 'icons.home'|trans({}, 'axipi_backend') }}"></i>{{ 'home'|trans({}, 'axipi_backend') }}</span>
                </h1>
            </div>
            <div class="mdl-card__supporting-text mdl-grid" id="dynamic_home">
            </div>
        </div>
    </div>
{% endblock %}

{% block style %}
    {{ parent() }}
{% endblock %}

{% block script %}
    {{ parent() }}
    <script type="text/javascript" src="{{ asset('bundles/axipibackend/js/home.js') }}"></script>
{% endblock %}
