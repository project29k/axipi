{% macro path_loop(object, mode, language) %}
    {% import _self as helper %}

    {% if object.parent %}
        {{ helper.path_loop(object.parent, mode, language) }}
    {% endif %}

    <span><a class="mdl-color-text--pink" href="{{ path('axipi_backend_pages', {mode: mode, language: language, action: 'read', id: object.id}) }}">{{ object.title }}</a></span>
{% endmacro %}
