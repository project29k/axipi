{% extends 'AxipiBackendBundle::base.html.twig' %}

{% block body %}
<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <div class="block">
                {{ form_start(form) }}
                {{ form_errors(form) }}
                <div class="row">
                    <div class="col-lg-4">
                        {{ form_row(form.program) }}
                        {{ form_row(form.component) }}
                        {{ form_row(form.code) }}
                        {{ form_row(form.title) }}
                        {{ form_row(form.slug) }}
                    </div>
                    <div class="col-lg-4">
                        {{ form_row(form.isActive) }}
                        {{ form_row(form.save) }}
                    </div>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block style %}
    {{ parent() }}
{% endblock %}

{% block script %}
    {{ parent() }}
{% endblock %}
