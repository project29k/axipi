{% extends 'AxipiBackendBundle::base.html.twig' %}

{% block body %}
<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            {% embed 'AxipiBackendBundle::block_title.html.twig' %}
                {% block block_title %}
                    <span><a href="{{ path('axipi_backend_page', {action: 'index'}) }}"><i class="fa fa-{{ 'icons.page'|trans({}, 'axipi_backend') }}"></i>{{ 'pages'|trans({}, 'axipi_backend') }}</a></span>
                    <span><i class="fa fa-{{ 'icons.page'|trans({}, 'axipi_backend') }}"></i>{{ page.title }}</span>
                {% endblock %}
                {% block block_title_actions %}
                    <li><a href="{{ path('axipi_backend_page', {action: 'update', 'id': page.id}) }}"><i class="fa fa-{{ 'icons.update'|trans({}, 'axipi_backend') }}"></i>Update</a></li>
                    <li><a href="{{ path('axipi_backend_page', {action: 'delete', 'id': page.id}) }}"><i class="fa fa-{{ 'icons.delete'|trans({}, 'axipi_backend') }}"></i>Delete</a></li>
                {% endblock %}
            {% endembed %}

            <div class="block">
                <div class="row">
                    <div class="col-lg-4">
                        {{ macro.read_field('page.program'|trans({}, 'axipi_backend'), page.program.id) }}
                        {{ macro.read_field('page.component'|trans({}, 'axipi_backend'), '<a href="' ~ path('axipi_backend_component', {action: 'read', 'id': page.component.id}) ~ '">' ~ page.component.title ~'</a>') }}
                        {{ macro.read_field('page.code'|trans({}, 'axipi_backend'), page.code) }}
                        {{ macro.read_field('page.title'|trans({}, 'axipi_backend'), page.title) }}
                        {{ macro.read_field('page.slug'|trans({}, 'axipi_backend'), page.slug) }}
                    </div>
                    <div class="col-lg-4">
                        {{ macro.read_field('page.isActive'|trans({}, 'axipi_backend'), page.isActive) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block style %}
    {{ parent() }}
{% endblock %}

{% block script %}
    {{ parent() }}
{% endblock %}
