{% extends 'AxipiBackendBundle::base.html.twig' %}

{% block title %}{{ page.title }} - {{ 'pages'|trans({}, 'axipi_backend') }}{% endblock %}

{% block navbar %}
    {% if 'wysiwyg' in mode %}
    {% else %}
        {{ parent() }}
    {% endif %}
{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <ul class="nav nav-tabs">
                {% for language in languages %}
                    <li role="presentation"{% if app.request.get('language') == language.code %} class="active"{% endif %}><a href="{{ path('axipi_backend_page', {mode: mode, language: language.code, action: 'index'}) }}">{{ language.title }}</a></li>
                {% endfor %}
            </ul>

            {% embed 'AxipiBackendBundle::block_title.html.twig' %}
                {% block block_title %}
                    <span><a href="{{ path('axipi_backend_page', {mode: mode, language: app.request.get('language'), action: 'index'}) }}"><i class="fa fa-{{ 'icons.page'|trans({}, 'axipi_backend') }}"></i>{{ 'pages'|trans({}, 'axipi_backend') }}</a></span>
                    <span><i class="fa fa-{{ page.component.icon }}"></i>{{ page.title }}</span>
                {% endblock %}
                {% block block_title_actions %}
                    {% if 'wysiwyg' in mode %}
                        <li><a class="wysiwyg_link" data-field_name="{{ mode|replace({'wysiwyg': ''}) }}" href="[page:{{ page.id}}:{{ page.slug }}]"><i class="fa fa-{{ 'icons.select'|trans({}, 'axipi_backend') }}"></i>{{ 'actions.select'|trans({}, 'axipi_backend') }}</a></li>
                    {% else %}
                        <li><a href="{{ path('axipi_core_slug', {'slug': page.slug}) }}" target="_blank"><i class="fa fa-{{ 'icons.frontend'|trans({}, 'axipi_backend') }}"></i>{{ 'frontend'|trans({}, 'axipi_backend') }}</a></li>
                        <li><a href="{{ path('axipi_backend_page', {mode: mode, language: app.request.get('language'), action: 'update', 'id': page.id}) }}"><i class="fa fa-{{ 'icons.update'|trans({}, 'axipi_backend') }}"></i>{{ 'actions.update'|trans({}, 'axipi_backend') }}</a></li>
                        <li><a href="{{ path('axipi_backend_page', {mode: mode, language: app.request.get('language'), action: 'delete', 'id': page.id}) }}"><i class="fa fa-{{ 'icons.delete'|trans({}, 'axipi_backend') }}"></i>{{ 'actions.delete'|trans({}, 'axipi_backend') }}</a></li>
                    {% endif %}
                {% endblock %}
            {% endembed %}

            <div class="block">
                <div class="row">
                    <div class="col-lg-4">
                        {{ macro.read_field('page.language'|trans({}, 'axipi_backend'), page.language.title) }}
                        {{ macro.read_field('page.component'|trans({}, 'axipi_backend'), page.component.title) }}
                        {% if page.parent %}{{ macro.read_field('page.parent'|trans({}, 'axipi_backend'), page.parent.title) }}{% endif %}
                        {{ macro.read_field('page.code'|trans({}, 'axipi_backend'), page.code) }}
                        {{ macro.read_field('page.template'|trans({}, 'axipi_backend'), page.template) }}
                        {{ macro.read_field('page.title'|trans({}, 'axipi_backend'), page.title) }}
                        {{ macro.read_field('page.slug'|trans({}, 'axipi_backend'), page.slug) }}
                    </div>
                    <div class="col-lg-4">
                        {{ macro.read_field('page.titleSeo'|trans({}, 'axipi_backend'), page.titleSeo) }}
                        {{ macro.read_field('page.descriptionSeo'|trans({}, 'axipi_backend'), page.descriptionSeo) }}
                        {{ macro.read_field('page.metaRobots'|trans({}, 'axipi_backend'), page.metaRobots) }}
                    </div>
                    <div class="col-lg-4">
                        {{ macro.read_field('page.titleSocial'|trans({}, 'axipi_backend'), page.titleSocial) }}
                        {{ macro.read_field('page.descriptionSocial'|trans({}, 'axipi_backend'), page.descriptionSocial) }}
                        {{ macro.read_field('page.isActive'|trans({}, 'axipi_backend'), page.isActive) }}
                    </div>
                </div>
            </div>

            {% if page.parent %}
                {% embed 'AxipiBackendBundle::block_title.html.twig' %}
                    {% block block_title %}
                        <span><i class="fa fa-{{ 'icons.page'|trans({}, 'axipi_backend') }}"></i>{{ 'page.parent'|trans({}, 'axipi_backend') }}</span>
                    {% endblock %}
                    {% block block_title_actions %}
                    {% endblock %}
                {% endembed %}

                <div class="block">
                    <div class="row">
                        <div class="col-lg-2 col-sm-3 text-center">
                            <a class="thumbnail" href="{{ path('axipi_backend_page', {mode: mode, language: app.request.get('language'), action: 'read', id: page.parent.id}) }}"><i class="fa fa-4x fa-{{ page.parent.component.icon }}"></i><br>{{ page.parent.title }}</a>
                        </div>
                    </div>
                </div>
            {% endif %}

            {% if page.children|length %}
                {% embed 'AxipiBackendBundle::block_title.html.twig' %}
                    {% block block_title %}
                        <span><i class="fa fa-{{ 'icons.page'|trans({}, 'axipi_backend') }}"></i>{{ 'page.children'|trans({}, 'axipi_backend') }}</span>
                    {% endblock %}
                    {% block block_title_actions %}
                    {% endblock %}
                {% endembed %}

                <div class="block">
                    <div class="row">
                        {% for object in page.children %}
                            <div class="col-lg-2 col-sm-3 text-center">
                                <a class="thumbnail" href="{{ path('axipi_backend_page', {mode: mode, language: app.request.get('language'), action: 'read', id: object.id}) }}"><i class="fa fa-4x fa-{{ page.component.icon }}"></i><br>{{ object.title }}</a>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}

{% block style %}
    {{ parent() }}
{% endblock %}

{% block script %}
    {{ parent() }}
{% endblock %}
