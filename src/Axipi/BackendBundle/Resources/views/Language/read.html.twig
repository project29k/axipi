{% extends 'AxipiBackendBundle::base.html.twig' %}

{% block title %}{{ language.title }} - {{ 'languages'|trans({}, 'axipi_backend') }}{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            {% embed 'AxipiBackendBundle::block_title.html.twig' %}
                {% block block_title %}
                    <span><a href="{{ path('axipi_backend_language', {action: 'index'}) }}"><i class="fa fa-{{ 'icons.language'|trans({}, 'axipi_backend') }}"></i>{{ 'languages'|trans({}, 'axipi_backend') }}</a></span>
                    <span><i class="fa fa-{{ 'icons.language'|trans({}, 'axipi_backend') }}"></i>{{ language.title }}</span>
                {% endblock %}
                {% block block_title_actions %}
                    <li><a href="{{ path('axipi_backend_language', {action: 'update', 'id': language.id}) }}"><i class="fa fa-{{ 'icons.update'|trans({}, 'axipi_backend') }}"></i>{{ 'actions.update'|trans({}, 'axipi_backend') }}</a></li>
                    <li><a href="{{ path('axipi_backend_language', {action: 'delete', 'id': language.id}) }}"><i class="fa fa-{{ 'icons.delete'|trans({}, 'axipi_backend') }}"></i>{{ 'actions.delete'|trans({}, 'axipi_backend') }}</a></li>
                {% endblock %}
            {% endembed %}

            <div class="block">
                <div class="row">
                    <div class="col-lg-4">
                        {{ macro.read_field('language.code'|trans({}, 'axipi_backend'), language.code) }}
                        {{ macro.read_field('language.title'|trans({}, 'axipi_backend'), language.title) }}
                    </div>
                    <div class="col-lg-4">
                        {{ macro.read_field('language.isActive'|trans({}, 'axipi_backend'), language.isActive) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block style %}
    {{ parent() }}
{% endblock %}

{% block script %}
    {{ parent() }}
{% endblock %}
