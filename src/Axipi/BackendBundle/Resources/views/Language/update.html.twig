{% extends 'AxipiBackendBundle::base.html.twig' %}

{% block title %}{{ language.title }} - {{ 'languages'|trans({}, 'axipi_backend') }}{% endblock %}

{% block body %}
    {{ form_start(form) }}
    {{ form_errors(form) }}
    <div class="mdl-grid">
        {% embed 'AxipiBackendBundle::card.html.twig' %}
            {% block card__actions %}
                <a class="mdl-button mdl-color--pink mdl-color-text--white" href="{{ path('axipi_backend_languages', {action: 'delete', 'id': language.id}) }}">{{ 'actions.delete'|trans({}, 'axipi_backend') }}</a>
            {% endblock %}
            {% block card__title %}
                <span><a class="mdl-color-text--pink" href="{{ path('axipi_backend_languages', {action: 'index'}) }}"><i class="fa fa-{{ 'icons.language'|trans({}, 'axipi_backend') }}"></i>{{ 'languages'|trans({}, 'axipi_backend') }}</a></span>
                <span><a class="mdl-color-text--pink" href="{{ path('axipi_backend_languages', {action: 'read', 'id': language.id}) }}">{{ language.title }}</a></span>
            {% endblock %}
            {% block card__supporting %}
                <div class="mdl-cell mdl-cell--4-col">
                    {{ form_row(form.code) }}
                    {{ form_row(form.title) }}
                    {{ form_row(form.isActive) }}
                    {{ form_row(form.submit) }}
                </div>
            {% endblock %}
        {% endembed %}
    </div>
    {{ form_end(form) }}
{% endblock %}

{% block style %}
    {{ parent() }}
{% endblock %}

{% block script %}
    {{ parent() }}
{% endblock %}
