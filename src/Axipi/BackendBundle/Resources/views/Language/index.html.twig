{% extends 'AxipiBackendBundle::base.html.twig' %}

{% block title %}{{ 'languages'|trans({}, 'axipi_backend') }}{% endblock %}

{% block body %}
    <div class="mdl-grid">
        <div class="mdl-card mdl-shadow--2dp mdl-color--white mdl-cell mdl-cell--12-col">
            <div class="mdl-card__actions mdl-color-text--black">
                <a class="mdl-button mdl-color--pink mdl-color-text--white" href="{{ path('axipi_backend_languages', {action: 'create'}) }}">{{ 'actions.create'|trans({}, 'axipi_backend') }}</a>
            </div>
            <div class="mdl-card__title">
                <h1 class="mdl-card__title-text">
                    <span><i class="fa fa-{{ 'icons.language'|trans({}, 'axipi_backend') }}"></i>{{ 'languages'|trans({}, 'axipi_backend') }}</span>
                </h1>
            </div>
            <div class="mdl-card__supporting-text mdl-grid">
                {% for object in objects %}
                    <div class="mdl-cell mdl-cell--2-col">
                        <a href="{{ path('axipi_backend_languages', {action: 'read', id: object.id}) }}"><i class="fa fa-4x fa-{{ 'icons.language'|trans({}, 'axipi_backend') }}"></i><br>{{ object.title }}</a>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}

{% block style %}
    {{ parent() }}
{% endblock %}

{% block script %}
    {{ parent() }}
{% endblock %}
