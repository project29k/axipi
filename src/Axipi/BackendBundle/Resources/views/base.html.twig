{% import 'AxipiBackendBundle::macro.html.twig' as macro %}
{% if form is defined %}{% form_theme form 'AxipiBackendBundle::form.html.twig' %}{% endif %}
<!DOCTYPE html>
<html>
<head>
<title>{% block title %}Welcome!{% endblock %}</title>
{% block style %}
<link rel="stylesheet" type="text/css" href="{{ asset('vendor/font-awesome/css/font-awesome.min.css') }}">
<link rel="stylesheet" type="text/css" href="{{ asset('vendor/bootstrap/dist/css/bootstrap.min.css') }}">
<link rel="stylesheet" type="text/css" href="{{ asset('bundles/axipibackend/css/base.css') }}">
{% endblock %}
{% block meta %}
<meta name="viewport" content="width=device-width, initial-scale=1.0">
{% endblock %}
</head>
<body>

<nav class="navbar navbar-default small" role="navigation">
    <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
        </button>
    </div>
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav">
            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                <li><a href="{{ path('axipi_backend_page', {action: 'index'}) }}"><i class="fa fa-{{ 'icons.page'|trans({}, 'axipi_backend') }}"></i>{{ 'pages'|trans({}, 'axipi_backend') }}</a></li>
                <li><a href="{{ path('axipi_backend_widget', {action: 'index'}) }}"><i class="fa fa-{{ 'icons.widget'|trans({}, 'axipi_backend') }}"></i>{{ 'widgets'|trans({}, 'axipi_backend') }}</a></li>
                {% if is_granted('ROLE_ADMIN') %}
                    <li><a href="{{ path('axipi_backend_component', {action: 'index'}) }}"><i class="fa fa-{{ 'icons.component'|trans({}, 'axipi_backend') }}"></i>{{ 'components'|trans({}, 'axipi_backend') }}</a></li>
                    <li><a href="#"><i class="fa fa-{{ 'icons.user'|trans({}, 'axipi_backend') }}"></i>{{ 'users'|trans({}, 'axipi_backend') }}</a></li>
                {% endif %}
            {% endif %}
        </ul>
        <ul class="nav navbar-nav pull-right">
            <li><a target="_blank" href="{{ path('axipi_core_home', {}) }}"><i class="fa fa-{{ 'icons.frontend'|trans({}, 'axipi_backend') }}"></i>Frontend</a></li>
            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                <li><a href="#"><i class="fa fa-{{ 'icons.profile'|trans({}, 'axipi_backend') }}"></i>{{ app.user.firstname }}{% if app.user.lastname %} {{ app.user.lastname }}{% endif %}</a></li>
                <li><a href="{{ logout_path('axipi_backend') }}"><i class="fa fa-{{ 'icons.logout'|trans({}, 'axipi_backend') }}"></i>{{ 'logout'|trans({}, 'axipi_backend') }}</a></li>
            {% endif %}
        </ul>
    </div>
</nav>

<div class="container-fluid">
    {% for type, flashes in app.session.flashbag.all() %}
        {% for flash in flashes %}
            <div class="alert alert-{{ type }}" role="alert">
                <p>{{ flash }}</p>
            </div>
        {% endfor %}
    {% endfor %}
</div>

{% block body %}
{% endblock %}

{% block script %}
<script type="text/javascript" src="{{ asset('vendor/jquery/dist/jquery.min.js') }}"></script>
<script type="text/javascript" src="{{ asset('vendor/bootstrap/dist/js/bootstrap.min.js') }}"></script>
<script type="text/javascript" src="{{ asset('vendor/json-editor/dist/jsoneditor.min.js') }}"></script>
{% endblock %}

</body>
</html>
