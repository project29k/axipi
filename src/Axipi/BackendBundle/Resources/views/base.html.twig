{% if form is defined %}{% form_theme form 'AxipiBackendBundle::form.html.twig' %}{% endif %}
<!DOCTYPE html>
<html>
<head>
<title>{% block title %}Welcome!{% endblock %}</title>
{% block style %}
<link rel="stylesheet" type="text/css" href="{{ asset('vendor/font-awesome/css/font-awesome.min.css') }}">
<link rel="stylesheet" type="text/css" href="{{ asset('vendor/bootstrap/dist/css/bootstrap.min.css') }}">
<link rel="stylesheet" type="text/css" href="{{ asset('bundles/axipibackend/css/base.css') }}">
{% endblock %}
{% block meta %}
<meta name="viewport" content="width=device-width, initial-scale=1.0">
{% endblock %}
</head>
<body>

<nav class="navbar navbar-default small" role="navigation">
    <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
        </button>
    </div>
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav">
            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                <li><a href="{{ path('axipi_backend_home') }}"><i class="fa fa-home"></i>Accueil</a></li>
                <li><a href="{{ path('axipi_backend_component', {action: 'index'}) }}"><i class="fa fa-cube"></i>{{ 'components'|trans({}, 'axipi_backend') }}</a></li>
                <li><a href="{{ path('axipi_backend_page', {action: 'index'}) }}"><i class="fa fa-file-text-o"></i>{{ 'pages'|trans({}, 'axipi_backend') }}</a></li>
                <li><a href="#"><i class="fa fa-leaf"></i>{{ 'widgets'|trans({}, 'axipi_backend') }}</a></li>
                <li><a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="fa fa-shield"></i>Admin <span class="caret"></span></a>
                    <ul class="dropdown-menu" role="menu">
                        <li><a href="#members"><i class="fa fa-group"></i>{{ 'users'|trans({}, 'axipi_backend') }}</a></li>
                        <li><a href="#_connections"><i class="fa fa-sign-in"></i>{{ 'connections'|trans({}, 'axipi_backend') }}</a></li>
                        <li><a href="#roles"><i class="fa fa-magic"></i>Roles</a></li>
                        <li><a href="#_configuration"><i class="fa fa-gears"></i>Configuration</a></li>
                        <li><a href="#_database"><i class="fa fa-hdd-o"></i>Database</a></li>
                        <li><a href="#_folders"><i class="fa fa-folder-open"></i>Folders</a></li>
                        <li><a href="#_info"><i class="fa fa-info-circle"></i>Info</a></li>
                    </ul>
                </li>
            {% endif %}
        </ul>
        <ul class="nav navbar-nav pull-right">
            <li><a target="_blank" href="{{ path('axipi_core_home', {}) }}"><i class="fa fa-rocket"></i>Frontend</a></li>
            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                <li><a href="#"><i class="fa fa-user"></i>{{ 'profile'|trans({}, 'axipi_backend') }}</a></li>
                <li><a href="{{ path('axipi_backend_logout') }}"><i class="fa fa-sign-out"></i>{{ 'logout'|trans({}, 'axipi_backend') }}</a></li>
            {% endif %}
        </ul>
    </div>
</nav>

<div class="container-fluid">
    {% for type, flashes in app.session.flashbag.all() %}
        {% for flash in flashes %}
            <div class="alert alert-{{ type }}" role="alert">
                <p>{{ flash }}</p>
            </div>
        {% endfor %}
    {% endfor %}
</div>

{% block body %}
{% endblock %}

{% block script %}
<script type="text/javascript" src="{{ asset('vendor/jquery/dist/jquery.min.js') }}"></script>
<script type="text/javascript" src="{{ asset('vendor/bootstrap/dist/js/bootstrap.min.js') }}"></script>
{% endblock %}

</body>
</html>
