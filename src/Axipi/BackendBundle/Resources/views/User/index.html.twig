{% extends 'AxipiBackendBundle::base.html.twig' %}

{% block title %}{{ 'users'|trans({}, 'axipi_backend') }}{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            {% embed 'AxipiBackendBundle::block_title.html.twig' %}
                {% block block_title %}
                    <span><i class="fa fa-{{ 'icons.user'|trans({}, 'axipi_backend') }}"></i>{{ 'users'|trans({}, 'axipi_backend') }} ({{ objects.getTotalItemCount }})</span>
                {% endblock %}
                {% block block_title_actions %}
                    <li><a href="{{ path('axipi_backend_user', {action: 'create'}) }}"><i class="fa fa-{{ 'icons.create'|trans({}, 'axipi_backend') }}"></i>{{ 'actions.create'|trans({}, 'axipi_backend') }}</a></li>
                {% endblock %}
            {% endembed %}

            <div class="block">
                {% embed 'AxipiBackendBundle::table.html.twig' with {'table_actions': false, 'row_actions': true} %}
                    {% block table_actions %}
                        <div>
                            <button name="submit" type="button" data-href="#select" data-id="works-works" class="inputsubmit submitcheckbox"><i class="fa fa-shopping-cart"></i>SÃ©lectionner</button>
                        </div>
                        <div>
                            <button name="submit" type="button" data-href="#merge" data-id="works-works" class="inputsubmit submitcheckbox"><i class="fa fa-chain"></i>Fusionner</button>
                        </div>
                    {% endblock %}

                    {% block table_head %}
                        <th class="hidden-xs{% if objects.isSorted('usr.id') %} sort_asc{% endif %}">{{ knp_pagination_sortable(objects, 'user.id'|trans({}, 'axipi_backend'), 'usr.id') }}</th>
                        <th class="{% if objects.isSorted('usr.username') %} sort_asc{% endif %}">{{ knp_pagination_sortable(objects, 'user.username'|trans({}, 'axipi_backend'), 'usr.username') }}</th>
                        <th class="hidden-xs{% if objects.isSorted('usr.firstname') %} sort_asc{% endif %}">{{ knp_pagination_sortable(objects, 'user.firstname'|trans({}, 'axipi_backend'), 'usr.firstname') }}</th>
                        <th class="hidden-xs{% if objects.isSorted('usr.lastname') %} sort_asc{% endif %}">{{ knp_pagination_sortable(objects, 'user.lastname'|trans({}, 'axipi_backend'), 'usr.lastname') }}</th>
                        <th class="hidden-xs{% if objects.isSorted('usr.isActive') %} sort_asc{% endif %}">{{ knp_pagination_sortable(objects, 'user.isActive'|trans({}, 'axipi_backend'), 'usr.isActive') }}</th>
                        <th class="hidden-xs{% if objects.isSorted('usr.dateCreated') %} sort_asc{% endif %}">{{ knp_pagination_sortable(objects, 'user.dateCreated'|trans({}, 'axipi_backend'), 'usr.dateCreated') }}</th>
                    {% endblock %}

                    {% block table_row %}
                        <td class="hidden-xs"><a href="{{ path('axipi_backend_user', {action: 'read', 'id': object.id}) }}">{{ object.id }}</a></td>
                        <td><a href="{{ path('axipi_backend_user', {action: 'read', 'id': object.id}) }}">{{ object.username }}</a></td>
                        <td class="hidden-xs">{{ object.firstname }}</td>
                        <td class="hidden-xs">{{ object.lastname }}</td>
                        <td class="hidden-xs">{{ object.isActive }}</td>
                        <td class="hidden-xs">{{ object.dateCreated|date }}</td>
                    {% endblock %}

                    {% block table_row_actions %}
                        <a href="{{ path('axipi_backend_user', {action: 'update', 'id': object.id}) }}"><i class="fa fa-{{ 'icons.update'|trans({}, 'axipi_backend') }}"></i>{{ 'actions.update'|trans({}, 'axipi_backend') }}</a>
                        {% if app.user.id != object.id %}<a href="{{ path('axipi_backend_user', {action: 'delete', 'id': object.id}) }}"><i class="fa fa-{{ 'icons.delete'|trans({}, 'axipi_backend') }}"></i>{{ 'actions.delete'|trans({}, 'axipi_backend') }}</a>{% endif %}
                    {% endblock %}
                {% endembed %}
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block style %}
    {{ parent() }}
{% endblock %}

{% block script %}
    {{ parent() }}
{% endblock %}
