{% extends 'AxipiBackendBundle::base.html.twig' %}

{% block title %}{{ 'zones'|trans({}, 'axipi_backend') }}{% endblock %}

{% block body %}
    <div class="mdl-grid">
        {% embed 'AxipiBackendBundle::card.html.twig' %}
            {% block card__actions %}
                <a class="mdl-button mdl-color--pink mdl-color-text--white" href="{{ path('axipi_backend_zones', {action: 'create'}) }}">{{ 'actions.create'|trans({}, 'axipi_backend') }}</a>
            {% endblock %}
            {% block card__title %}
                <span><i class="fa fa-{{ 'icons.zone'|trans({}, 'axipi_backend') }}"></i>{{ 'zones'|trans({}, 'axipi_backend') }}</span>
            {% endblock %}
            {% block card__supporting %}
                {% for object in objects %}
                    <div class="mdl-cell mdl-cell--2-col">
                        <a href="{{ path('axipi_backend_zones', {action: 'read', id: object.id}) }}"><i class="fa fa-4x fa-{{ 'icons.zone'|trans({}, 'axipi_backend') }}"></i><br>{{ object.code }}</a>
                    </div>
                {% endfor %}
            {% endblock %}
        {% endembed %}
    </div>
{% endblock %}

{% block style %}
    {{ parent() }}
{% endblock %}

{% block script %}
    {{ parent() }}
{% endblock %}
