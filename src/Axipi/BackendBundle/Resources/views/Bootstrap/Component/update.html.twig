{% extends 'AxipiBackendBundle:MaterialDesignLite:base.html.twig' %}

{% block title %}{{ component.title }} - {{ 'components'|trans({}, 'axipi_backend') }}{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            {% embed 'AxipiBackendBundle:Bootstrap:block_title.html.twig' %}
                {% block block_title %}
                    <span><a href="{{ path('axipi_backend_components', {action: 'index'}) }}"><i class="fa fa-{{ 'icons.component'|trans({}, 'axipi_backend') }}"></i>{{ 'components'|trans({}, 'axipi_backend') }}</a></span>
                    {% if component.parent %}
                        {% if component.parent.parent %}
                            <span><a href="{{ path('axipi_backend_components', {action: 'read', id: component.parent.parent.id}) }}"><i class="fa fa-{{ component.parent.parent.icon }}"></i>{{ component.parent.parent.title }}</a></span>
                        {% endif %}
                        <span><a href="{{ path('axipi_backend_components', {action: 'read', id: component.parent.id}) }}"><i class="fa fa-{{ component.parent.icon }}"></i>{{ component.parent.title }}</a></span>
                    {% endif %}
                    <span><a href="{{ path('axipi_backend_components', {action: 'read', 'id': component.id}) }}"><i class="fa fa-{{ component.icon }}"></i>{{ component.title }}</a></span>
                    <span>{{ 'actions.update'|trans({}, 'axipi_backend') }}</span>
                {% endblock %}
                {% block block_title_actions %}
                    <li><a href="{{ path('axipi_backend_components', {action: 'delete', 'id': component.id}) }}">{{ 'actions.delete'|trans({}, 'axipi_backend') }}</a></li>
                {% endblock %}
            {% endembed %}

            <div class="block">
                {{ form_start(form) }}
                {{ form_errors(form) }}
                <div class="row">
                    <div class="mdl-cell mdl-cell--4-col">
                        {{ form_row(form.category) }}
                        {{ form_row(form.service) }}
                        {{ form_row(form.template) }}
                        {{ form_row(form.title) }}
                        {{ form_row(form.zone) }}
                        {{ form_row(form.parent) }}
                        {{ form_row(form.icon) }}
                    </div>
                    <div class="mdl-cell mdl-cell--8-col">
                        {{ form_row(form.isUnique) }}
                        {{ form_row(form.isHome) }}
                        {{ form_row(form.excludeSitemap) }}
                        {{ form_row(form.excludeSearch) }}
                        {{ form_row(form.isActive) }}
                        {{ form_row(form.attributesSchema) }}
                        {{ form_row(form.submit) }}
                    </div>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block style %}
    {{ parent() }}
{% endblock %}

{% block script %}
    {{ parent() }}
{% endblock %}
