{% extends 'AxipiBackendBundle:Bootstrap:base.html.twig' %}

{% block title %}{{ 'components'|trans({}, 'axipi_backend') }}{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            {% embed 'AxipiBackendBundle:Bootstrap:block_title.html.twig' %}
                {% block block_title %}
                    <span><a href="{{ path('axipi_backend_components', {action: 'index'}) }}"><i class="fa fa-{{ 'icons.component'|trans({}, 'axipi_backend') }}"></i>{{ 'components'|trans({}, 'axipi_backend') }}</a></span>
                    <span><i class="fa fa-{{ 'icons.create'|trans({}, 'axipi_backend') }}"></i>{{ 'actions.create'|trans({}, 'axipi_backend') }}</span>
                {% endblock %}
                {% block block_title_actions %}
                {% endblock %}
            {% endembed %}

            <div class="block">
                {{ form_start(form) }}
                {{ form_errors(form) }}
                <div class="row">
                    <div class="col-lg-4">
                        {{ form_row(form.category) }}
                        {{ form_row(form.service) }}
                        {{ form_row(form.template) }}
                        {{ form_row(form.title) }}
                        {{ form_row(form.zone) }}
                        {{ form_row(form.parent) }}
                        {{ form_row(form.icon) }}
                    </div>
                    <div class="col-lg-8">
                        {{ form_row(form.isUnique) }}
                        {{ form_row(form.isHome) }}
                        {{ form_row(form.excludeSitemap) }}
                        {{ form_row(form.excludeSearch) }}
                        {{ form_row(form.isActive) }}
                        {{ form_row(form.attributesSchema) }}
                        {{ form_row(form.submit) }}
                    </div>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block style %}
    {{ parent() }}
{% endblock %}

{% block script %}
    {{ parent() }}
{% endblock %}
