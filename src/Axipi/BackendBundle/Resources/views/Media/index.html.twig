{% extends 'AxipiBackendBundle::base.html.twig' %}

{% block title %}{{ 'medias'|trans({}, 'axipi_backend') }}{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            {% embed 'AxipiBackendBundle::block_title.html.twig' %}
                {% block block_title %}
                    {% for tree in tree %}
                        {% if tree.slug != slug %}
                            <span><a href="{{ path('axipi_backend_media', {action: 'index', 'slug': tree.slug}) }}"><i class="fa fa-{{ tree.icon }}"></i>{{ tree.name }}</a></span>
                        {% else %}
                            <span><i class="fa fa-{{ tree.icon }}"></i>{{ tree.name }}</span>
                        {% endif %}
                    {% endfor %}
                {% endblock %}
                {% block block_title_actions %}
                    <li><a href="{{ path('axipi_backend_media', {action: 'create'}) }}"><i class="fa fa-{{ 'icons.create'|trans({}, 'axipi_backend') }}"></i>{{ 'actions.create'|trans({}, 'axipi_backend') }}</a></li>
                {% endblock %}
            {% endembed %}

            <div class="block">
                <div class="row">
                    {% for object in objects %}
                        <div class="col-lg-2 col-sm-3 text-center">
                            {% if object.type == 'folder' %}
                                <a class="thumbnail" href="{{ path('axipi_backend_media', {action: 'index', slug: object.slug}) }}"><i class="fa fa-4x fa-{{ object.icon }}"></i><br>{{ object.name }}</a>
                            {% else %}
                                <a class="thumbnail" href="{{ path('axipi_backend_media', {action: 'read', slug: object.slug}) }}"><i class="fa fa-4x fa-{{ object.icon }}"></i><br>{{ object.name }}</a>
                            {% endif %}
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block style %}
    {{ parent() }}
{% endblock %}

{% block script %}
    {{ parent() }}
{% endblock %}
