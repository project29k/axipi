{% extends 'AxipiBackendBundle::base.html.twig' %}

{% block title %}{{ media.name }} - {{ 'medias'|trans({}, 'axipi_backend') }}{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            {% embed 'AxipiBackendBundle::block_title.html.twig' %}
                {% block block_title %}
                    {% for tree in tree %}
                        {% if tree.slug != media.slug %}
                            <span><a href="{{ path('axipi_backend_media', {action: 'index', 'slug': tree.slug}) }}"><i class="fa fa-folder"></i>{{ tree.name }}</a></span>
                        {% endif %}
                    {% endfor %}
                    <span><i class="fa fa-{{ media.icon }}"></i>{{ media.name }}</span>
                {% endblock %}
                {% block block_title_actions %}
                    <li><a href="{{ path('axipi_backend_media', {action: 'update', 'slug': media.slug}) }}"><i class="fa fa-{{ 'icons.update'|trans({}, 'axipi_backend') }}"></i>{{ 'actions.update'|trans({}, 'axipi_backend') }}</a></li>
                    <li><a href="{{ path('axipi_backend_media', {action: 'delete', 'slug': media.slug}) }}"><i class="fa fa-{{ 'icons.delete'|trans({}, 'axipi_backend') }}"></i>{{ 'actions.delete'|trans({}, 'axipi_backend') }}</a></li>
                {% endblock %}
            {% endembed %}

            <div class="block">
                <div class="row">
                    <div class="col-lg-4">
                        {{ macro.read_field('media.name'|trans({}, 'axipi_backend'), media.name) }}
                        {{ macro.read_field('media.size'|trans({}, 'axipi_backend'), media.size) }}
                        {{ macro.read_field('media.mime'|trans({}, 'axipi_backend'), media.mime) }}
                    </div>
                    <div class="col-lg-4">
                        <img src="{{ asset('medias/' ~ media.slug) }}" class="img-responsive">
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block style %}
    {{ parent() }}
{% endblock %}

{% block script %}
    {{ parent() }}
{% endblock %}
