{% extends 'AxipiBackendBundle::base.html.twig' %}

{% block title %}{{ 'components'|trans({}, 'axipi_backend') }}{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            {% embed 'AxipiBackendBundle::block_title.html.twig' %}
                {% block block_title %}
                    <span><i class="fa fa-{{ 'icons.component'|trans({}, 'axipi_backend') }}"></i>{{ 'components'|trans({}, 'axipi_backend') }} ({{ objects.getTotalItemCount }})</span>
                {% endblock %}
                {% block block_title_actions %}
                    <li><a role="button" data-toggle="collapse" href="#collapseExample" aria-expanded="true" aria-controls="collapseExample"><i class="fa fa-{{ 'icons.create'|trans({}, 'axipi_backend') }}"></i>{{ 'actions.create'|trans({}, 'axipi_backend') }}</a></li>
                {% endblock %}
            {% endembed %}

            <div class="block collapse" id="collapseExample">
                <div class="row">
                    <div class="col-lg-2 col-sm-3 text-center">
                        <a class="thumbnail" href="{{ path('axipi_backend_component', {action: 'create', 'id': 'page'}) }}"><i class="fa fa-4x fa-{{ 'icons.page'|trans({}, 'axipi_backend') }}"></i><br>Page</a>
                    </div>
                    <div class="col-lg-2 col-sm-3 text-center">
                        <a class="thumbnail" href="{{ path('axipi_backend_component', {action: 'create', 'id': 'widget'}) }}"><i class="fa fa-4x fa-{{ 'icons.widget'|trans({}, 'axipi_backend') }}"></i><br>Widget</a>
                    </div>
                </div>
            </div>

            <div class="block">
                {% embed 'AxipiBackendBundle::table.html.twig' with {'table_actions': false, 'row_actions': true} %}
                    {% block table_actions %}
                        <div>
                            <button name="submit" type="button" data-href="#select" data-id="works-works" class="inputsubmit submitcheckbox"><i class="fa fa-shopping-cart"></i>SÃ©lectionner</button>
                        </div>
                        <div>
                            <button name="submit" type="button" data-href="#merge" data-id="works-works" class="inputsubmit submitcheckbox"><i class="fa fa-chain"></i>Fusionner</button>
                        </div>
                    {% endblock %}

                    {% block table_head %}
                        <th class="hidden-xs{% if objects.isSorted('cmp.id') %} sort_asc{% endif %}">{{ knp_pagination_sortable(objects, 'component.id'|trans({}, 'axipi_backend'), 'cmp.id') }}</th>
                        <th class="{% if objects.isSorted('cmp.title') %} sort_asc{% endif %}">{{ knp_pagination_sortable(objects, 'component.title'|trans({}, 'axipi_backend'), 'cmp.title') }}</th>
                        <th class="hidden-xs{% if objects.isSorted('cmp.service') %} sort_asc{% endif %}">{{ knp_pagination_sortable(objects, 'component.service'|trans({}, 'axipi_backend'), 'cmp.service') }}</th>
                        <th class="hidden-xs{% if objects.isSorted('cmp.isActive') %} sort_asc{% endif %}">{{ knp_pagination_sortable(objects, 'component.isActive'|trans({}, 'axipi_backend'), 'cmp.isActive') }}</th>
                        <th class="hidden-xs{% if objects.isSorted('cmp.dateCreated') %} sort_asc{% endif %}">{{ knp_pagination_sortable(objects, 'component.dateCreated'|trans({}, 'axipi_backend'), 'cmp.dateCreated') }}</th>
                    {% endblock %}

                    {% block table_row %}
                        <td class="hidden-xs"<a href="{{ path('axipi_backend_component', {action: 'read', 'id': object.id}) }}">{{ object.id }}</a></td>
                        <td><a href="{{ path('axipi_backend_component', {action: 'read', 'id': object.id}) }}"><i class="fa fa-{{ ('icons.' ~ object.category)|trans({}, 'axipi_backend') }}"></i>{{ object.title }}</a></td>
                        <td class="hidden-xs">{{ object.service }}</td>
                        <td class="hidden-xs">{{ object.isActive }}</td>
                        <td class="hidden-xs">{{ object.dateCreated|date }}</td>
                    {% endblock %}

                    {% block table_row_actions %}
                        <a href="{{ path('axipi_backend_component', {action: 'update', 'id': object.id}) }}"><i class="fa fa-{{ 'icons.update'|trans({}, 'axipi_backend') }}"></i>{{ 'actions.update'|trans({}, 'axipi_backend') }}</a>
                        <a href="{{ path('axipi_backend_component', {action: 'delete', 'id': object.id}) }}"><i class="fa fa-{{ 'icons.delete'|trans({}, 'axipi_backend') }}"></i>{{ 'actions.delete'|trans({}, 'axipi_backend') }}</a>
                    {% endblock %}
                {% endembed %}
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block style %}
    {{ parent() }}
{% endblock %}

{% block script %}
    {{ parent() }}
{% endblock %}
