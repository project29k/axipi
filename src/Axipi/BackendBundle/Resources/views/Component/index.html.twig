{% extends 'AxipiBackendBundle::base.html.twig' %}

{% block title %}{{ 'components'|trans({}, 'axipi_backend') }}{% endblock %}

{% block body %}
    {% embed 'AxipiBackendBundle::card.html.twig' with {no_title: true, toggle: true, id: 'components-create'} %}
        {% block card__actions %}
            <a class="mdl-button mdl-color--pink mdl-color-text--white toggle" href="#components-create">{{ 'actions.close'|trans({}, 'axipi_backend') }}</a>
        {% endblock %}
        {% block card__supporting %}
            <div class="mdl-cell mdl-cell--2-col">
                <a href="{{ path('axipi_backend_component', {action: 'create', id: 'page'}) }}"><i class="fa fa-3x fa-{{ 'icons.page'|trans({}, 'axipi_backend') }}"></i><br>{{ 'category.page'|trans({}, 'axipi_backend') }}</a>
            </div>
            <div class="mdl-cell mdl-cell--2-col">
                <a href="{{ path('axipi_backend_component', {action: 'create', id: 'widget'}) }}"><i class="fa fa-3x fa-{{ 'icons.widget'|trans({}, 'axipi_backend') }}"></i><br>{{ 'category.widget'|trans({}, 'axipi_backend') }}</a>
            </div>
        {% endblock %}
    {% endembed %}

    {% embed 'AxipiBackendBundle::card.html.twig' %}
        {% block card__actions %}
            <a class="mdl-button mdl-color--pink mdl-color-text--white toggle" href="#components-create">{{ 'actions.create'|trans({}, 'axipi_backend') }}</a>
        {% endblock %}
        {% block card__title %}
            <span><i class="fa fa-{{ 'icons.component'|trans({}, 'axipi_backend') }}"></i>{{ 'components'|trans({}, 'axipi_backend') }}</span>
        {% endblock %}
    {% endembed %}

    {% embed 'AxipiBackendBundle::card.html.twig' %}
        {% block card__title %}
            <span><i class="fa fa-{{ 'icons.page'|trans({}, 'axipi_backend') }}"></i>{{ 'category.page'|trans({}, 'axipi_backend') }}</span>
        {% endblock %}
        {% block card__supporting %}
            {% for object in pages %}
                <div class="mdl-cell mdl-cell--2-col">
                    <a href="{{ path('axipi_backend_component', {action: 'read', id: object.id}) }}"><i class="fa fa-3x fa-{{ object.icon }}"></i><br>{{ object.title }}</a>
                </div>
            {% endfor %}
        {% endblock %}
    {% endembed %}

    {% embed 'AxipiBackendBundle::card.html.twig' %}
        {% block card__title %}
            <span><i class="fa fa-{{ 'icons.widget'|trans({}, 'axipi_backend') }}"></i>{{ 'category.widget'|trans({}, 'axipi_backend') }}</span>
        {% endblock %}
        {% block card__supporting %}
            {% for object in widgets %}
                <div class="mdl-cell mdl-cell--2-col">
                    <a href="{{ path('axipi_backend_component', {action: 'read', id: object.id}) }}"><i class="fa fa-3x fa-{{ object.icon }}"></i><br>{{ object.title }}</a>
                </div>
            {% endfor %}
        {% endblock %}
    {% endembed %}
{% endblock %}

{% block style %}
    {{ parent() }}
{% endblock %}

{% block script %}
    {{ parent() }}
{% endblock %}
