{% extends 'AxipiBackendBundle::base.html.twig' %}

{% block title %}{{ component.title }} - {{ 'components'|trans({}, 'axipi_backend') }}{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            {% embed 'AxipiBackendBundle::block_title.html.twig' %}
                {% block block_title %}
                    <span><a href="{{ path('axipi_backend_component', {action: 'index'}) }}"><i class="fa fa-{{ 'icons.component'|trans({}, 'axipi_backend') }}"></i>{{ 'components'|trans({}, 'axipi_backend') }}</a></span>
                    <span><i class="fa fa-{{ 'icons.component'|trans({}, 'axipi_backend') }}"></i>{{ component.title }}</span>
                {% endblock %}
                {% block block_title_actions %}
                    <li><a href="{{ path('axipi_backend_component', {action: 'update', 'id': component.id}) }}"><i class="fa fa-{{ 'icons.update'|trans({}, 'axipi_backend') }}"></i>{{ 'actions.update'|trans({}, 'axipi_backend') }}</a></li>
                    <li><a href="{{ path('axipi_backend_component', {action: 'delete', 'id': component.id}) }}"><i class="fa fa-{{ 'icons.delete'|trans({}, 'axipi_backend') }}"></i>{{ 'actions.delete'|trans({}, 'axipi_backend') }}</a></li>
                {% endblock %}
            {% endembed %}

            <div class="block">
                <div class="row">
                    <div class="col-lg-4">
                        {{ macro.read_field('component.category'|trans({}, 'axipi_backend'), component.category) }}
                        {{ macro.read_field('component.service'|trans({}, 'axipi_backend'), component.service) }}
                        {{ macro.read_field('component.title'|trans({}, 'axipi_backend'), component.title) }}
                        {% if component.zone %}{{ macro.read_field('component.zone'|trans({}, 'axipi_backend'), component.zone.code) }}{% endif %}
                        {% if component.parent %}{{ macro.read_field('component.parent'|trans({}, 'axipi_backend'), component.parent.title) }}{% endif %}
                        {{ macro.read_field('component.icon'|trans({}, 'axipi_backend'), component.icon) }}
                    </div>
                    <div class="col-lg-4">
                        {{ macro.read_field('component.isUnique'|trans({}, 'axipi_backend'), component.isUnique) }}
                        {{ macro.read_field('component.isSitemap'|trans({}, 'axipi_backend'), component.isSitemap) }}
                        {{ macro.read_field('component.isSearch'|trans({}, 'axipi_backend'), component.isSearch) }}
                        {{ macro.read_field('component.isActive'|trans({}, 'axipi_backend'), component.isActive) }}
                        {{ macro.read_field('component.attributesSchema'|trans({}, 'axipi_backend'), component.attributesSchema) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block style %}
    {{ parent() }}
{% endblock %}

{% block script %}
    {{ parent() }}
{% endblock %}
