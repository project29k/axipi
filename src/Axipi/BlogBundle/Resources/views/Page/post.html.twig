{% extends 'AxipiBlogBundle::base.html.twig' %}

{% block main %}
    <!-- Blog / Post -->
    <section class="main">
        <header>
            <h1>{{ page.title }}</h1>
        </header>

        <article>
            {{ convertText(page.attribute('description')|raw) }}
        </article>
    </section>

    <section class="comment-form">
        <header>
            <h1>Leave a Reply</h1>
        </header>

        <article>
            {{ form_start(form) }}
                {{ form_row(form.message) }}
                {{ form_row(form.author) }}
                {{ form_row(form.email) }}
                {{ form_row(form.website) }}
                {{ form_row(form.recaptcha) }}
                {{ form_row(form.submit) }}
                <input type="hidden" name="comment_parent" id="comment_parent" value="0">
            {{ form_end(form) }}
        </article>

        <footer>
            <p>Your email address will not be published. Required fields are marked <span class="required">*</span>
        </footer>
    </section>
    <!-- Blog / Post (end) -->
{% endblock %}

{% block meta %}
    {{ parent() }}
    {{ page.meta|raw }}
{% endblock %}

{% block style %}
    {{ parent() }}
    {{ page.style|raw }}
{% endblock %}

{% block script %}
    {{ parent() }}
    {{ page.script|raw }}
    <script type="text/javascript" src="https://www.google.com/recaptcha/api.js?hl={{ app.request.locale }}"></script>
{% endblock %}
