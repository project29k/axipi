{% extends 'AxipiBlogBundle::base.html.twig' %}

{% block main %}
    <!-- Blog / Post -->
    <div class="row">
        <div class="col-lg-12">
            <h1>{{ page.title }}</h1>
            {{ convertText(page.attribute('description')|raw) }}
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="well" id="comments">
                <h4>Leave a Comment:</h4>
                <form action="#comments" method="post" accept-charset="utf-8">
                <div class="row">
                    <div class="col-lg-6">
                        <div class="form-group">
                            <label for="author">Your name *</label>
                            <input type="text" name="author" value="" id="author" class="form-control required">
                        </div>
                        <div class="form-group">
                            <label for="email">Your email</label>
                            <input type="text" name="email" value="" id="email" class="form-control valid_email">
                        </div>
                        <div class="form-group">
                            <label for="website">Your website</label>
                            <input type="text" name="website" value="" id="website" class="form-control">
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="form-group">
                            <label for="message">Your comment *</label>
                            <textarea name="message" cols="40" rows="10" id="message" class="form-control required"></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </div>
                </form>
            
            </div>
        </div>
    </div>

    <!-- Blog / Post (end) -->
{% endblock %}

{% block meta %}
    {{ parent() }}
    {{ page.meta|raw }}
{% endblock %}

{% block style %}
    {{ parent() }}
    {{ page.style|raw }}
{% endblock %}

{% block script %}
    {{ parent() }}
    {{ page.script|raw }}
{% endblock %}
