{% extends 'AxipiBlogBundle::base.html.twig' %}

{% block main %}
    <!-- Blog / Category -->
    <div class="row">
        <div class="col-lg-12">
            <h1>{{ page.title }}</h1>
            {{ page.attribute('description')|raw }}
        </div>
    </div>

    {%for post in page.children %}
        <div class="row">
            <div class="col-lg-12">
                <h2><a href="{{ path('axipi_core_slug', {slug: post.slug}) }}">{{ post.title }}</a></h2>
                {{ post.attribute('description')|raw }}
                <hr>
            </div>
        </div>
    {% endfor %}

    <!-- Blog / Category (end) -->
{% endblock %}

{% block style %}
    {{ parent() }}
{% endblock %}

{% block script %}
    {{ parent() }}
{% endblock %}
