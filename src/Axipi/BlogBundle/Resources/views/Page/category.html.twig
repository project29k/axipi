{% extends 'AxipiBlogBundle::base.html.twig' %}

{% block main %}
    <!-- Blog / Category -->
    <div class="row">
        <div class="col-lg-12">
            <h1>{{ page.title }}</h1>
            {{ convertText(page.attribute('description')|raw) }}
        </div>
    </div>

    {%for post in page.children %}
        <div class="row">
            <div class="col-lg-12">
                <h2><a href="{{ buildLink(post) }}">{{ post.title }}</a></h2>
                {% set content = post.attribute('description')|split('<p><!-- pagebreak --></p>') %}
                {{ convertText(content|first|raw) }}
                {% if content|length > 1 %}
                    <p><a class="btn btn-primary" href="{{ buildLink(post) }}">Read More <i class="fa fa-angle-right"></i></a></p>
                {% endif %}
                <hr>
            </div>
        </div>
    {% endfor %}

    <!-- Blog / Category (end) -->
{% endblock %}

{% block style %}
    {{ parent() }}
{% endblock %}

{% block script %}
    {{ parent() }}
{% endblock %}
