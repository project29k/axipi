{% extends 'AxipiContactBundle::base.html.twig' %}

{% block main %}
    <!-- Blog / Post -->
    <div class="row">
        <div class="col-lg-12">
            <h1>{{ page.title }}</h1>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-4">
            {{ convertText(page.attribute('description')|raw) }}
        </div>
        <div class="col-lg-8">
            <div class="well" id="comments">
                <h4>Leave a Message:</h4>
                {{ form_start(form) }}
                {{ form_errors(form) }}
                <div class="row">
                    <div class="col-lg-6">
                        <div class="form-group">
                            {{ form_row(form.author) }}
                        </div>
                        <div class="form-group">
                            {{ form_row(form.email) }}
                        </div>
                        <div class="form-group">
                            {{ form_row(form.recaptcha) }}
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="form-group">
                            {{ form_row(form.message) }}
                        </div>
                        {{ form_row(form.submit) }}
                    </div>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>

    <!-- Blog / Post (end) -->
{% endblock %}

{% block meta %}
    {{ parent() }}
    {{ page.meta|raw }}
{% endblock %}

{% block style %}
    {{ parent() }}
    {{ page.style|raw }}
{% endblock %}

{% block script %}
    {{ parent() }}
    {{ page.script|raw }}
    <script type="text/javascript" src="https://www.google.com/recaptcha/api.js?hl={{ app.request.locale }}"></script>
{% endblock %}
