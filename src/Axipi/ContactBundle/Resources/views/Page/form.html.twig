{% extends 'AxipiContactBundle::base.html.twig' %}

{% block main %}
    <!-- Contact / Form -->
    <section class="main">
        <header>
            <h1>{{ page.title }}</h1>
        </header>

        <article>
            {{ convertText(page.attribute('description')|raw) }}
        </article>
    </section>

    <section class="comment-form">
        <h1>Leave a Message</h1>
        {{ form_start(form) }}
            {{ form_row(form.message) }}
            {{ form_row(form.author) }}
            {{ form_row(form.email) }}
            {{ form_row(form.recaptcha) }}
            {{ form_row(form.submit) }}
        {{ form_end(form) }}
    </section>
    <!-- Contact / Form (end) -->
{% endblock %}

{% block meta %}
    {{ parent() }}
    {{ page.meta|raw }}
{% endblock %}

{% block style %}
    {{ parent() }}
    {{ page.style|raw }}
{% endblock %}

{% block script %}
    {{ parent() }}
    {{ page.script|raw }}
    <script type="text/javascript" src="https://www.google.com/recaptcha/api.js?hl={{ app.request.locale }}"></script>
{% endblock %}
