<!-- Twitter / Card -->
<meta name="twitter:site" content="{{ widget.attribute('site') }}">
<meta name="twitter:card" content="summary">
<meta name="twitter:title" content="{{ page.titleSocial|default(page.title) }}">
<meta name="twitter:description" content="{{ page.descriptionSocial }}">
<meta name="twitter:url" content="{{ buildLink(page) }}">
{% if page.attribute('image') %}
<meta name="twitter:image" content="{{ absolute_url(asset('uploads/' ~ page.attribute('image'))) }}">
{% endif %}
<!-- Twitter / Card (end) -->
