{% extends 'AxipiGalleryBundle::base.html.twig' %}

{% block main %}
    <!-- Gallery / Album -->
    <div class="row">
        <div class="col-lg-12">
            {{ convertText(page.attribute('description')|raw) }}
        </div>
    </div>

    <div class="row">
        {% for media in children %}
            <div class="col-lg-2">
                <a class="thumbnail" href="{{ buildLink(media) }}"><img src="{{ asset('uploads/' ~ media.attribute('image')) }}" class="img-responsive"></a>
            </div>
        {% endfor %}
    </div>
    <!-- Gallery / Album (end) -->
{% endblock %}

{% block meta %}
    {{ parent() }}
    {{ page.meta|raw }}
{% endblock %}

{% block style %}
    {{ parent() }}
    {{ page.style|raw }}
{% endblock %}

{% block script %}
    {{ parent() }}
    {{ page.script|raw }}
{% endblock %}
