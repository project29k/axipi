{% extends 'AxipiGalleryBundle::base.html.twig' %}

{% block main %}
    <!-- Gallery / Album -->
    <section class="main">
        <header>
            <h1>{{ page.title }}</h1>
        </header>

        <article>
            {{ convertText(page.attribute('description')|raw) }}
        </article>
    </section>

    <section class="medias">
        <p>
        {% for media in medias %}
            <a href="{{ buildLink(media) }}">
                <img src="{{ asset('uploads/' ~ media.attribute('image')) }}">
            </a>
        {% endfor %}
        </p>
    </section>

    <section class="albums">
        {% for album in albums %}
            <a  href="{{ buildLink(album) }}">
                {% if album.attribute('thumbnail') %}
                    <img src="{{ asset('uploads/' ~ album.attribute('thumbnail')) }}">
                {% else %}
                    {{ album.title }}
                {% endif %}
            </a>
        {% endfor %}
    </section>
    <!-- Gallery / Album (end) -->
{% endblock %}

{% block meta %}
    {{ parent() }}
    {{ page.meta|raw }}
{% endblock %}

{% block style %}
    {{ parent() }}
    {{ page.style|raw }}
{% endblock %}

{% block script %}
    {{ parent() }}
    {{ page.script|raw }}
{% endblock %}
