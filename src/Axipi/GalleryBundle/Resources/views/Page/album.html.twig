{% extends 'AxipiGalleryBundle::base.html.twig' %}

{% block title %}{{ page.title }}{% endblock %}

{% block main %}
    <!-- Gallery / Album -->
    <div class="row">
        <div class="col-lg-12">
            <h1>album controller</h1>
            <h2>{{ page.title }}</h2>
            <p><a href="{{ path('axipi_core_slug', {slug: 'a/b/c/d'}) }}">a/b/c/d</a></p>
            <p><a href="{{ path('axipi_core_slug', {slug: 'axipi'}) }}">axipi</a></p>
        </div>
    </div>

    <div class="row">
        {%for media in page.children %}
            <div class="col-lg-3">
                <a href="{{ path('axipi_core_slug', {slug: media.slug}) }}"><img src="{{ asset('uploads/' ~ media.attribute('image')) }}" class="img-responsive"></a>
            </div>
        {% endfor %}
    </div>
    <!-- Gallery / Album (end) -->
{% endblock %}

{% block style %}
    {{ parent() }}
{% endblock %}

{% block script %}
    {{ parent() }}
{% endblock %}
